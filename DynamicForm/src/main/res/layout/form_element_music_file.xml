<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMainForm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/colorFormMasterElementBackground"
    android:orientation="vertical">



    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="@color/colorFormMasterDivider" />-->

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorPrimarywelcome"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/formElementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/cfdialog_button_white_text_color"
            android:textSize="@dimen/elementTextTitleSize"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAsteric"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ses_asterisk" />


    </androidx.cardview.widget.CardView>

    <me.riddhimanadib.formmaster.model.FlowLayout
        android:id="@+id/formElementList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/rounded_holo_border_grey_light"
        android:orientation="vertical">
    </me.riddhimanadib.formmaster.model.FlowLayout>

        <!-- <include
             layout="@layout/layout_chip"
             android:visibility="gone" />-->

        <!-- <include
             layout="@layout/layout_chip"
             android:visibility="gone" />-->




</LinearLayout>

