<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_grey_border_holo">

    <!-- android:layout_marginStart="@dimen/margin_quarter"
     android:layout_marginLeft="@dimen/margin_quarter"
     android:layout_marginEnd="@dimen/margin_quarter"
     android:layout_marginRight="@dimen/margin_quarter"-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv1"
        style="@style/text_style_1"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_full"
        android:layout_marginLeft="@dimen/margin_full"
        android:layout_marginRight="@dimen/margin_full"
        android:layout_marginEnd="@dimen/margin_full"
        android:layout_weight="3"
        android:ellipsize="end"
        android:fontFamily="@string/medium_bold"
        android:maxLines="2"
        android:text="@string/credit_point_type"
        android:textSize="@dimen/body_1"
       />

    <View
        style="@style/divider"
        android:layout_width="@dimen/divider_length"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv4"
        style="@style/text_style_1"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:ellipsize="end"
        android:fontFamily="@string/medium_bold"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/date"
        android:textSize="@dimen/body_1"
        />

    <View
        style="@style/divider"
        android:layout_width="@dimen/divider_length"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv2"
            style="@style/text_style_1"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@string/medium_bold"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/margin_half"
            android:text="@string/credit_points"
            android:textSize="@dimen/body_1"
            />

        <View style="@style/divider" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_quarter"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    app:srcCompat="@drawable/add_circle"
                    app:tint="@color/contest_vote" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                style="@style/divider"
                android:layout_width="@dimen/divider_length"
                android:layout_height="match_parent" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_quarter"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    app:srcCompat="@drawable/minus_circle"
                    app:tint="@color/red" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View style="@style/divider" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>