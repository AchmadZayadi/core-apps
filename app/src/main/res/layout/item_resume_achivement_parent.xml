<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_marginTop="7sp"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4sp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/realtive_parentid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/titleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/black_81"
            android:layout_toLeftOf="@+id/addachivements"
            android:text="Manage Achivements"
            ></TextView>

    <TextView
        android:id="@+id/addachivements"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:text="+ Add AChivements"
        android:fontFamily="@font/helvetica_medium"
        android:textSize="12sp"
        android:textColor="#004594"
        ></TextView>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/realtive_parentid"
        android:id="@+id/recylerachivementid"
        android:background="@drawable/rounded_holo_border_graynew"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/notextrl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_below="@+id/realtive_parentid"
        android:layout_height="120sp"
        >

        <TextView
            android:id="@+id/notextid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="You have not added any Achievements yet."
            android:fontFamily="@font/d_din_bold"
            android:textColor="@color/black_54"
            ></TextView>

    </RelativeLayout>
</RelativeLayout>