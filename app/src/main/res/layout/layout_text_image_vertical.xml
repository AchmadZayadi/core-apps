<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ripple_selector"
    android:id="@+id/vMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_quarter"
    android:paddingLeft="@dimen/margin_quarter"
    android:paddingEnd="@dimen/margin_quarter"
    android:paddingRight="@dimen/margin_quarter">

    <com.sesolutions.animate.bang.SmallBangView
        android:id="@+id/vBang"
        android:layout_width="32dp"
        android:layout_height="32dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivOptionImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"

            android:tint="@color/text_color_1"
            app:srcCompat="@drawable/post" />
    </com.sesolutions.animate.bang.SmallBangView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOptionText"
        style="@style/text_style_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_quarter"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/body_1"
        tools:text="Post" />

</LinearLayout>