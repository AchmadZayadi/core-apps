<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_half"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/rlMain"
        style="@style/ripple_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCategory"
            style="@style/text_style_1"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/margin_full"
            android:paddingStart="@dimen/margin_full"
            android:paddingTop="@dimen/margin_full"
            android:text="@string/people_know"
            android:textStyle="bold" />

        <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
            android:id="@+id/rvChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCategory"
            android:clipToPadding="false"
            android:padding="@dimen/margin_half"
            tools:listitem="@layout/item_peaple_suggestion_child"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMore"
            style="@style/text_style_1"
            android:layout_width="match_parent"
            android:layout_below="@+id/rvChild"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/margin_half"
            android:text="@string/see_more"
            android:textStyle="bold" />

        <View style="@style/divider"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_below="@+id/tvMore"
            android:background="@color/backgroundColor"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
