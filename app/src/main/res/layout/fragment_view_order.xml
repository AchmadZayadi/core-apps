<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Background_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llcheckout"
        android:layout_below="@+id/appBar">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="visible"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_half"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_style_1"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_full"
                        android:text="Name and Billing Address "
                        android:textSize="@dimen/title"
                        android:textStyle="bold" />

                    <View style="@style/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_full">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ses_location"
                                android:tint="@color/text_color_2"/>

                            <TextView
                                android:id="@+id/tvBillingAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:layout_marginLeft="@dimen/margin_half"
                                android:text="Louise Gonzales   12A,Panipath India 91 Haryana Gurugram" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_half">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:padding="2dp"
                                android:src="@drawable/call"
                                android:tint="@color/text_color_2"/>

                            <TextView
                                android:id="@+id/tvBillingPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_half"
                                android:text="9874563210" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_half">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:tint="@color/text_color_2"
                                android:src="@drawable/message" />

                            <TextView
                                android:id="@+id/tvBillingEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_half"
                                android:text="Domain@gmail.com" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_half"
                    android:orientation="vertical"
                    tools:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_style_1"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_full"
                        android:text="Name and Shipping Address "
                        android:textSize="@dimen/title"
                        android:textStyle="bold" />

                    <View style="@style/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_full">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ses_location"
                                android:tint="@color/text_color_2"/>

                            <TextView
                                android:id="@+id/tvShippingAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:layout_marginLeft="@dimen/margin_half"
                                android:text="Louise Gonzales   12A,Panipath India 91 Haryana Gurugram" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_half">


                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:padding="2dp"
                                android:src="@drawable/call"
                                android:tint="@color/text_color_2"/>

                            <TextView
                                android:id="@+id/tvShippingPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_half"
                                android:text="9874563210" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_half">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:tint="@color/text_color_2"
                                android:src="@drawable/message" />

                            <TextView
                                android:id="@+id/tvShippingEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_half"
                                android:text="Domain@gmail.com" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_half"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_full">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/text_style_1"
                            android:layout_height="wrap_content"
                            android:text="Order Id: "
                            android:textSize="@dimen/sub_title"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvorderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_title"
                            android:textStyle="bold"
                            tools:text="#235"/>
                    </LinearLayout>


                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/margin_half"
                        android:layout_marginBottom="@dimen/margin_half" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Store Detail " />

                        <TextView
                            android:id="@+id/tvStoreName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="Beauty products" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_quarter">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order by " />

                        <TextView
                            android:id="@+id/tvOrderBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="Parenela daniel" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_quarter">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payemnt Method" />

                        <TextView
                            android:id="@+id/tvPaymentMethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="Cash on Delivery" />
                    </RelativeLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/margin_half"
                        android:layout_marginBottom="@dimen/margin_half" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_style_1"
                        android:layout_height="wrap_content"
                        android:text="Order Information "
                        android:textSize="@dimen/sub_title"
                        android:textStyle="bold" />

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/margin_half"
                        android:layout_marginBottom="@dimen/margin_half" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvOrdferInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:layoutAnimation="@anim/anim_fall_down"
                        android:orientation="vertical"
                        android:padding="@dimen/item_offset" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/margin_full"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLabelOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Order Details"/>

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/margin_half"
                        android:layout_marginBottom="@dimen/margin_half" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:layoutAnimation="@anim/anim_fall_down"
                        android:orientation="vertical"
                        android:padding="@dimen/item_offset" />

                </LinearLayout>


                <LinearLayout
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_half"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_full">

                    <RelativeLayout
                        android:id="@+id/rlshippingcost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shipping cost : " />

                        <TextView
                            android:id="@+id/tvShippingCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="$ 5.00" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_quarter">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grand Total : "
                            android:textSize="@dimen/title" />

                        <TextView
                            android:id="@+id/tvGrandTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="$ 215.08"
                            android:textSize="@dimen/title" />
                    </RelativeLayout>

                </LinearLayout>

                <include layout="@layout/layout_no_data" />

                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="@dimen/button_height_small"
                    android:layout_height="@dimen/button_height_small"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>