<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4e4888">

    <com.sesolutions.ui.customviews.SquareImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_full">

            <androidx.appcompat.widget.AppCompatTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_maintenance_1"
                android:textColor="@color/white"
                android:textSize="@dimen/title"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_quarter"
                android:gravity="center"
                android:text="@string/text_maintenance_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_heading"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_super"
                android:layout_marginBottom="@dimen/margin_full"
                app:cardBackgroundColor="#3d3777"
                app:cardCornerRadius="0dp"
                app:cardElevation="@dimen/margin_half">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_full"
                    android:paddingLeft="@dimen/margin_full"
                    android:paddingTop="@dimen/margin_full"
                    android:paddingEnd="@dimen/margin_full"
                    android:paddingRight="@dimen/margin_full">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/filled_white"
                        android:paddingStart="@dimen/margin_half"
                        android:paddingLeft="@dimen/margin_half"
                        android:paddingEnd="@dimen/margin_half"
                        android:paddingRight="@dimen/margin_half">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/text_maintenance_3"
                            android:textColor="@color/black_87"
                            android:textSize="@dimen/sub_heading"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="160sp"
                            android:id="@+id/etCode"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_half"
                            android:layout_marginLeft="@dimen/margin_half"
                            android:layout_toEndOf="@+id/tv1"
                            android:layout_toRightOf="@+id/tv1"
                            android:background="@null"
                            android:ellipsize="end"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:padding="@dimen/margin_quarter"
                            android:singleLine="true" />


                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_medium"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_full"
                        android:layout_marginBottom="@dimen/margin_full"
                        android:background="#4e4888"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingStart="@dimen/margin_full"
                        android:paddingLeft="@dimen/margin_full"
                        android:paddingEnd="@dimen/margin_full"
                        android:paddingRight="@dimen/margin_full"
                        android:text="@string/TXT_SIGN_IN"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sub_heading" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>