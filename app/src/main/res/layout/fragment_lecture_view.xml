<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rlNonVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <!-- <android.support.v7.widget.LinearLayoutCompat
             android:layout_width="match_parent"
             android:layout_height="@dimen/height_video_player"
             android:background="@color/black">-->

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorPrimary">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="15dp"
                app:srcCompat="@drawable/arrow_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="96dp"
                android:paddingRight="96dp"
                android:text="Lecture"
                android:textColor="@color/white"
                android:textSize="@dimen/title" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

<!--                <androidx.appcompat.widget.AppCompatImageView-->
<!--                    android:id="@+id/ivShare"-->
<!--                    android:layout_width="48dp"-->
<!--                    android:layout_height="48dp"-->
<!--                    android:padding="15dp"-->
<!--                    android:tint="@color/white"-->
<!--                    app:srcCompat="@drawable/share_music" />-->

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivOption"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="15dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/vertical_dots" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            style="@style/Card_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:id="@+id/cardvid"
            app:cardElevation="1dp"
            android:layout_below="@+id/rl1"
            android:layout_margin="8dp">
        <com.sesolutions.ui.customviews.VideoEnabledWebView
            android:id="@+id/wbVideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_video_player"

            android:background="@color/black" />

        <ImageView
            android:id="@+id/ivPipMode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rl1"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_filled_transparent_black"
            android:scaleType="centerInside"
            android:src="@drawable/ic_pip"
            android:visibility="gone"
            tools:visibility="visible"
            android:tint="@color/white" />
        </androidx.cardview.widget.CardView>
        <!--
            </android.support.v7.widget.LinearLayoutCompat>
        -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/mScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llReaction"
            android:layout_below="@+id/cardvid"
            android:animateLayoutChanges="true"
            android:layoutAnimation="@anim/anim_fall_down"
            android:visibility="invisible"
            tools:visibility="visible">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/font_awesome_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvDetail"
                    style="@style/Card_style"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="1dp">


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llVideoTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/margin_half">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvAlbumTitle"
                                style="@style/text_style_1"
                                android:layout_width="match_parent"
                                android:layout_below="@+id/ivCoverPhoto"
                                android:layout_weight="1"
                                android:paddingStart="@dimen/margin_full"
                                android:paddingLeft="@dimen/margin_full"
                                android:paddingEnd="@dimen/margin_half"
                                android:paddingRight="@dimen/margin_half"
                                android:textColor="@color/text_color_1" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivDesc"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginEnd="@dimen/margin_full"
                                android:layout_marginRight="@dimen/margin_full"
                                android:rotation="90"
                                app:srcCompat="@drawable/play_button"
                                app:tint="@color/text_color_1" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_half"
                            android:layout_marginBottom="@dimen/margin_full"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/margin_full"
                            android:paddingLeft="@dimen/margin_full"
                            android:paddingEnd="@dimen/margin_full"
                            android:paddingRight="@dimen/margin_full">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvViewCount"
                                style="@style/text_style_2"
                                android:layout_width="wrap_content"
                                android:layout_below="@id/tvAlbumTitle"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/caption" />
                            <include layout="@layout/layout_upper_video_view" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
                <!-- <View
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_below="@+id/tvAlbumTitle"
                     android:background="@color/grey_light" />
                -->

                <androidx.cardview.widget.CardView
                    style="@style/Card_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    android:layout_margin="8dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llAlbumDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvAlbumTitle"
                            android:layout_marginStart="@dimen/margin_full"
                            android:layout_marginLeft="@dimen/margin_full"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginEnd="@dimen/margin_full"
                            android:layout_marginRight="@dimen/margin_full"
                            android:layout_marginBottom="@dimen/margin_half"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivUserImage"
                                android:layout_width="@dimen/height_medium"
                                android:layout_height="@dimen/height_medium"
                                android:layout_marginEnd="@dimen/margin_half"
                                android:layout_marginRight="@dimen/margin_half" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvUserTitle"
                                style="@style/text_style_1"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textSize="@dimen/body_1" />


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llStar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_half"
                                android:layout_marginLeft="@dimen/margin_half"
                                android:visibility="visible">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivStar1"
                                    style="@style/image_star"
                                    android:layout_width="@dimen/size_star_music"
                                    android:layout_height="@dimen/size_star_music"
                                    android:layout_margin="@dimen/margin_star"
                                    app:srcCompat="@drawable/star_unfilled"
                                    app:tint="@color/colorPrimary" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivStar2"
                                    style="@style/image_star"
                                    android:layout_width="@dimen/size_star_music"
                                    android:layout_height="@dimen/size_star_music"
                                    android:layout_margin="@dimen/margin_star"
                                    app:srcCompat="@drawable/star_unfilled"
                                    app:tint="@color/colorPrimary" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivStar3"
                                    style="@style/image_star"
                                    android:layout_width="@dimen/size_star_music"
                                    android:layout_height="@dimen/size_star_music"
                                    android:layout_margin="@dimen/margin_star"
                                    app:srcCompat="@drawable/star_unfilled"
                                    app:tint="@color/colorPrimary" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivStar4"
                                    style="@style/image_star"
                                    android:layout_width="@dimen/size_star_music"
                                    android:layout_height="@dimen/size_star_music"
                                    android:layout_margin="@dimen/margin_star"
                                    app:srcCompat="@drawable/star_unfilled"
                                    app:tint="@color/colorPrimary" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivStar5"
                                    style="@style/image_star"
                                    android:layout_width="@dimen/size_star_music"
                                    android:layout_height="@dimen/size_star_music"
                                    android:layout_margin="@dimen/margin_star"
                                    app:srcCompat="@drawable/star_unfilled"
                                    app:tint="@color/colorPrimary" />


                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/margin_half">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvAlbumDate"
                                style="@style/text_style_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_full"
                                android:layout_marginLeft="@dimen/margin_full"
                                android:layout_marginTop="@dimen/margin_medium"
                                android:layout_marginEnd="@dimen/margin_full"
                                android:layout_marginRight="@dimen/margin_full"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="@dimen/body_1"
                                android:visibility="gone" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDesc"
                                style="@style/text_style_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_full"
                                android:layout_marginLeft="@dimen/margin_full"
                                android:layout_marginTop="@dimen/margin_half"
                                android:layout_marginEnd="@dimen/margin_full"
                                android:layout_marginRight="@dimen/margin_full"
                                android:autoLink="web"
                                android:linksClickable="true"
                                android:visibility="gone" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llStar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/margin_full"
                    android:paddingTop="@dimen/margin_half"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/body_1"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/llStar" />


                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="@dimen/button_height_small"
                    android:layout_height="@dimen/button_height_small"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

    <include layout="@layout/layout_full_video" />
</RelativeLayout>
