<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        style="@style/ripple_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingStart="@dimen/margin_medium"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingTop="4dp"
        android:paddingEnd="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:paddingBottom="6dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv1"
            style="@style/text_style_1"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/body_1"
            tools:text="For New Activity" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv2"
            style="@style/text_style_1"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="@dimen/body_2"
            tools:text="67" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv3"
            style="@style/text_style_1"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="@dimen/body_2"
            tools:text="67" />

    </LinearLayout>
    <!-- android:layout_marginStart="48dp"
     android:layout_marginLeft="48dp"
     android:layout_marginEnd="48dp"
     android:layout_marginRight="48dp"-->
    <View
        style="@style/divider"
        android:layout_marginStart="@dimen/margin_full"
        android:layout_marginLeft="@dimen/margin_full"
        android:layout_marginEnd="@dimen/margin_full"
        android:layout_marginRight="@dimen/margin_full"
        android:background="@color/colorPrimary" />

</LinearLayout>