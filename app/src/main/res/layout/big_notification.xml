<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F2E0F7"
    android:layout_marginRight="@dimen/margin_half"
    android:paddingLeft="@dimen/margin_medium"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_quarter">

                <TextView
                    android:id="@+id/textSongName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/loading_song"
                    android:textColor="@color/notificationcolor"
                    android:textSize="@dimen/sub_title" />

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="@dimen/margin_quarter"
                    android:src="@drawable/ic_close" />
            </LinearLayout>
            <TextView
                android:id="@+id/textAlbumName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/notificationcolor"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:divider="@color/grey_feed"
                android:dividerPadding="12.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:showDividers="middle">

                <ImageView
                    android:id="@+id/btnPrevious"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:rotation="180"
                    android:src="@drawable/next_dark" />

                <ImageView
                    android:id="@+id/btnPause"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="@dimen/margin_full"
                    android:layout_marginRight="@dimen/margin_full"
                    android:src="@drawable/pause" />

                <ImageView
                    android:id="@+id/btnPlay"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="@dimen/margin_full"
                    android:layout_marginRight="@dimen/margin_full"
                    android:src="@drawable/play_button"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/btnNext"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/next"
                    android:src="@drawable/next_dark"
                    app:tint="@color/notificationcolor" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/imageViewAlbumArt"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:padding="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:scaleType="centerCrop"
            android:alpha=".6"
            android:src="@drawable/music_player" />
    </LinearLayout>

</LinearLayout>
