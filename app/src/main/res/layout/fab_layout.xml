<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fabContainerLayout"
    android:background="@color/transparent"
    android:gravity="bottom|center_horizontal"
    android:visibility="gone"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tv_irigasi"
            android:background="@color/colorPrimarydark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="8dp"
            android:layout_margin="@dimen/_3ssp"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:padding="@dimen/_8ssp"
            android:text="Lapor Irigasi"
            android:textColor="#fff" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

<!--            <com.google.android.material.floatingactionbutton.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"-->
<!--                android:id="@+id/f1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:elevation="0dp"-->
<!--                android:src="@android:drawable/ic_dialog_map"-->
<!--                app:backgroundTint="@color/colorPrimarydark"-->
<!--                app:borderWidth="0dp"-->
<!--                app:fabSize="normal" />-->
            <TextView
                android:id="@+id/tv_unggah_foto"
                android:background="@color/colorPrimarydark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:padding="@dimen/_8ssp"

                android:layout_margin="@dimen/_3ssp"
                android:text="Unggah Foto"
                android:textColor="#fff" />
        </FrameLayout>


    </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tv_tulis_sesuatu"
            android:background="@color/colorPrimarydark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="8dp"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:padding="@dimen/_8ssp"
            android:layout_margin="@dimen/_3ssp"
            android:text="Tulis Sesuatu"
            android:textColor="#fff" />
    </FrameLayout>
</LinearLayout>