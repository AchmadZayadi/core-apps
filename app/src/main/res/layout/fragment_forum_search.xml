<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar_search" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlModerator"
                style="@style/Background_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_half"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin_half">

                    <TextView
                        android:id="@+id/label"
                        style="@style/text_style_stats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moderators: " />

                    <TextView
                        android:id="@+id/tvModerator"
                        style="@style/text_style_primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/llCreateTopic"
                    style="@style/Card_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin_quarter"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:cardCornerRadius="4sp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:id="@+id/rlCreate"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_search_drawer"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_holo_border_primary"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            style="@style/image_tint_2"
                            android:id="@+id/ivPost"
                            android:layout_width="36dp"
                            android:layout_height="@dimen/height_search_drawer"
                            android:layout_gravity="center_vertical"
                            android:padding="10dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/add_24dp"
                            android:tint="@color/colorImage"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPost"
                            style="@style/text_style_1"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="@dimen/margin_half"
                            android:layout_marginRight="@dimen/margin_half"
                            android:layout_toEndOf="@+id/ivPost"
                            android:layout_toRightOf="@+id/ivPost"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorFormMasterHeaderText"
                            android:textSize="@dimen/elementTextTitleSize"
                            android:visibility="visible"
                            tools:text="Post New Topic" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:descendantFocusability="beforeDescendants"
                android:divider="#b5b5b5"
                android:layoutAnimation="@anim/anim_fall_down"
                android:orientation="vertical" />

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/layout_no_data" />

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="@dimen/button_height_small"
        android:layout_height="@dimen/button_height_small"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>