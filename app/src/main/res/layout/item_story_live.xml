<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:theme="@style/AppThemeMatrial"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/margin_quarter">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/gradient_live">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ivProfileAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/live"
            android:paddingStart="@dimen/margin_quarter"
            android:paddingEnd="@dimen/margin_quarter"
            app:textAllCaps="true"
            android:textSize="@dimen/caption"
            android:textColor="@color/white"
            android:textStyle="normal"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
