<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/Main_style"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="false"
                    app:expandedTitleMarginStart="@dimen/margin_full"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:title=" "
                    app:titleEnabled="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvImage"
                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:layout_margin="@dimen/margin_half"
                            android:visibility="gone"
                            app:cardCornerRadius="@dimen/margin_half"
                            tools:visibility="visible">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                tools:background="@tools:sample/backgrounds/scenic"
                                tools:visibility="visible">

                            </androidx.appcompat.widget.AppCompatImageView>
                        </androidx.cardview.widget.CardView>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cvImage"
                            android:layout_marginTop="@dimen/margin_half"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvServiceName"
                                    style="@style/text_style_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_half"
                                    android:layout_marginLeft="@dimen/margin_half"
                                    android:textSize="@dimen/_16ssp"
                                    android:layout_marginRight="64sp"
                                    android:layout_marginEnd="64sp"
                                    android:maxLines="2"
                                    android:textStyle="bold"
                                    tools:text="Carpenter Service Service Service a ">


                                </androidx.appcompat.widget.AppCompatTextView>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/ivBook"
                                    style="@style/text_style_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginEnd="@dimen/margin_half"
                                    android:background="@drawable/rounded_filled"
                                    android:padding="@dimen/_6ssp"
                                    android:text="BOOK">

                                </androidx.appcompat.widget.AppCompatTextView>
                            </RelativeLayout>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_half"
                                android:layout_marginLeft="@dimen/margin_half"
                                android:layout_marginTop="6dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/ivPro"
                                    android:layout_width="@dimen/_16ssp"
                                    android:layout_height="@dimen/_16ssp"
                                    tools:background="@tools:sample/avatars" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvLocation"
                                    style="@style/text_style_1"
                                    android:layout_marginStart="@dimen/margin_quarter"
                                    android:layout_marginLeft="@dimen/margin_quarter"
                                    android:layout_marginTop="@dimen/_1ssp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="italic"
                                    tools:text="Adam Smith" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llStar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/llAlbumDetail"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/margin_half"
                                android:visibility="gone">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivStar1"
                                    style="@style/image_star"
                                    android:layout_width="@dimen/size_star_music"
                                    android:layout_height="@dimen/size_star_music"
                                    android:layout_marginLeft="@dimen/margin_star"
                                    android:layout_marginRight="@dimen/margin_star"
                                    app:srcCompat="@drawable/star_unfilled"
                                    app:tint="#ffc107" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivStar2"
                                    style="@style/image_star"
                                    android:layout_width="@dimen/size_star_music"
                                    android:layout_height="@dimen/size_star_music"
                                    android:layout_marginLeft="@dimen/margin_star"
                                    android:layout_marginRight="@dimen/margin_star"
                                    app:srcCompat="@drawable/star_unfilled"
                                    app:tint="#ffc107" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivStar3"
                                    style="@style/image_star"
                                    android:layout_width="@dimen/size_star_music"
                                    android:layout_height="@dimen/size_star_music"
                                    android:layout_marginLeft="@dimen/margin_star"
                                    android:layout_marginRight="@dimen/margin_star"
                                    app:srcCompat="@drawable/star_unfilled"
                                    app:tint="#ffc107" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivStar4"
                                    style="@style/image_star"
                                    android:layout_width="@dimen/size_star_music"
                                    android:layout_height="@dimen/size_star_music"
                                    android:layout_marginLeft="@dimen/margin_star"
                                    android:layout_marginRight="@dimen/margin_star"
                                    app:srcCompat="@drawable/star_unfilled"
                                    app:tint="#ffc107" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivStar5"
                                    style="@style/image_star"
                                    android:layout_width="@dimen/size_star_music"
                                    android:layout_height="@dimen/size_star_music"
                                    android:layout_marginLeft="@dimen/margin_star"
                                    android:layout_marginRight="@dimen/margin_star"
                                    app:srcCompat="@drawable/star_unfilled"
                                    app:tint="#ffc107" />


                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/margin_half"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvRate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_half"
                                    android:layout_marginLeft="@dimen/margin_half"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold"
                                    tools:text="$12 / hr">

                                </androidx.appcompat.widget.AppCompatTextView>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/llFavorite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="@dimen/margin_full"
                                    android:gravity="center">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/tvImageFavorite"
                                        android:layout_width="@dimen/height_icon_feed_option_home"
                                        android:layout_height="@dimen/height_icon_feed_option_home"
                                        android:layout_marginEnd="@dimen/margin_quarter"
                                        android:layout_marginRight="@dimen/margin_quarter"
                                        app:srcCompat="@drawable/favorite" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvCommentUpper"
                                        style="@style/text_style_2"
                                        android:layout_width="wrap_content"
                                        android:layout_marginEnd="@dimen/margin_full"
                                        android:layout_marginRight="@dimen/margin_full"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textSize="@dimen/sub_title"
                                        tools:text="1" />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/llLike"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_full"
                                    android:layout_toLeftOf="@+id/llFavorite"

                                    android:gravity="center">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ivImageLike"
                                        android:layout_width="@dimen/height_icon_feed_option_home"
                                        android:layout_height="@dimen/height_icon_feed_option_home"
                                        android:layout_marginEnd="@dimen/margin_quarter"
                                        android:layout_marginRight="@dimen/margin_quarter"
                                        app:srcCompat="@drawable/ic_like" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvLikeCount"
                                        style="@style/text_style_2"
                                        android:layout_width="wrap_content"
                                        android:layout_marginEnd="@dimen/margin_half"
                                        android:layout_marginRight="@dimen/margin_half"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textSize="@dimen/sub_title"
                                        tools:text="2" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvLike"
                                        style="@style/text_style_2"
                                        android:layout_width="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/like"
                                        android:textSize="@dimen/text_size_feed_lcs"
                                        android:visibility="gone" />

                                </androidx.appcompat.widget.LinearLayoutCompat>


                            </RelativeLayout>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llDescription"
                            style="@style/Forground_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llDetail"
                            android:layout_marginTop="@dimen/margin_full"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_half"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_14ssp"
                                tools:text="Info">

                            </androidx.appcompat.widget.AppCompatTextView>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvQDescription"
                                style="@style/text_style_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/rlQnaDetail"
                                android:layout_marginStart="@dimen/margin_half"
                                android:layout_marginLeft="@dimen/margin_half"
                                android:layout_marginTop="@dimen/margin_half"
                                android:layout_marginEnd="@dimen/margin_full"
                                android:layout_marginRight="@dimen/margin_full"
                                android:textSize="@dimen/body_1"
                                tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <com.sesolutions.utils.FlowLayout
                            android:id="@+id/flTags"
                            style="@style/Forground_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/margin_medium"
                            android:paddingBottom="@dimen/margin_quarter" />

                        <View style="@style/divider" />


                    </RelativeLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/ToolbarTheme" />
                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    style="@style/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@color/white"
                    app:tabGravity="fill"
                    app:tabMode="scrollable"
                    android:textAlignment="center"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabTextAppearance="@style/myTabTextStyle"
                    app:tabTextColor="@color/text_color_1" />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>