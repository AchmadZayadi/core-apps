<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMainClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_half"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llBgImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBgImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvImageForegroundText"
                style="@style/text_style_light"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/body_1" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llBuySellmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_full"
        android:paddingLeft="@dimen/margin_full"
        android:paddingEnd="@dimen/margin_full"
        android:paddingRight="@dimen/margin_full"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBuySellTitle"
            style="@style/text_style_1"
            android:layout_marginTop="@dimen/margin_half"
            android:textSize="@dimen/sub_title"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBuySellPrice"
            style="@style/text_style_1"
            android:layout_marginTop="@dimen/margin_half"
            android:ellipsize="end"
            android:maxLines="1" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/body_1"
                android:layout_height="@dimen/body_1"
                android:layout_marginRight="@dimen/margin_quarter"
                android:tint="@color/grey_feed"
                app:srcCompat="@drawable/ic_location" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBuySellLocation"
                style="@style/text_style_2"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/body_1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBuySellDescription"
            style="@style/text_style_1"
            android:layout_marginTop="@dimen/margin_half"
            android:ellipsize="end"
            android:maxLines="35" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBuySellSoldOut"
            android:maxLines="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_half"
            android:text="@string/sold_out"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bBuy"
                style="@style/button_simple"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_marginEnd="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_half"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="@string/buy_now"
                android:textSize="@dimen/body_1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bSold"
                style="@style/button_simple"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_marginEnd="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_half"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="@string/mark_sold"
                android:textSize="@dimen/body_1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSoldBottomText"
            style="@style/text_style_1"
            android:layout_marginTop="@dimen/margin_half"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/sold_bottom_text"
            android:textSize="@dimen/caption" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llMainFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_full"
        android:paddingLeft="@dimen/margin_full"
        android:paddingTop="@dimen/margin_half"
        android:paddingEnd="@dimen/margin_full"
        android:paddingRight="@dimen/margin_full"
        android:visibility="gone">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFileType"
            android:layout_width="@dimen/height_image_file_type_feed"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/bg_file_type"
            android:padding="@dimen/margin_quarter" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_full"
            android:paddingLeft="@dimen/margin_full">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFileName"
                style="@style/text_style_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_half"
                android:text="Text body"
                android:textSize="@dimen/body_1"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFileType"
                style="@style/text_style_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingBottom="@dimen/margin_half"
                android:textSize="@dimen/body_1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvFilePreview"
                style="@style/button_simple"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="0dp"
                android:text="@string/preview"
                android:textSize="@dimen/body_1" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.sesolutions.utils.FlowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBodyText"
            style="@style/text_style_1"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/margin_full"
            android:paddingLeft="@dimen/margin_full"
            android:paddingTop="@dimen/margin_half"
            android:autoLink="web|phone"
            android:paddingEnd="@dimen/margin_full"
            android:paddingRight="@dimen/margin_full"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSeeMore"
            style="@style/text_style_2"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/margin_full"
            android:paddingLeft="@dimen/margin_full"
            android:text="@string/see_more_feed"
            android:visibility="gone" />
    </com.sesolutions.utils.FlowLayout>


    <include layout="@layout/layout_feed_profile" />

    <include layout="@layout/layout_feed_quote" />

    <include layout="@layout/layout_feed_poll" />

    <include layout="@layout/layout_video" />

    <include layout="@layout/layout_live_video"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_half"
        app:cardCornerRadius="@dimen/margin_half"
        app:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/llSingleImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSingleImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:visibility="gone"
                tools:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivStickerImage"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:visibility="gone" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivGIF"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_giffeed"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMarker"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/gps"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <include layout="@layout/layout_multiple_image_feed" />



    <Button
        android:theme="@style/Theme.MaterialComponents"
        android:id="@+id/bBoost"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_quarter"
        android:layout_marginEnd="@dimen/margin_full"
        android:background="@drawable/button_tabs"
        android:layout_marginRight="@dimen/margin_full"
        android:backgroundTint="#7B52A5"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:visibility="visible"
        tools:text="Boost Post"
        app:cornerRadius="@dimen/margin_half"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFeedTags"
        style="@style/text_style_1"
        android:layout_marginLeft="@dimen/margin_full"
        android:layout_marginRight="@dimen/margin_full"
        android:paddingTop="@dimen/margin_half"
        android:textStyle="bold"
        android:visibility="gone" />
</androidx.appcompat.widget.LinearLayoutCompat>