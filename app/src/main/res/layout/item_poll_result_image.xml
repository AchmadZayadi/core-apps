<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:scaleType="centerCrop" />
        <View
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:background="@drawable/scrim" />

        <RelativeLayout
            android:id="@+id/rlbottomid"
            android:layout_below="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/text_style_1"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Yes"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:minHeight="48sp"
                />

            <com.sesolutions.animate.bang.SmallBangView
                android:id="@+id/sbvVote"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_toLeftOf="@+id/tvTitle"
                android:layout_marginRight="@dimen/margin_half"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVote"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_gravity="center_vertical|end"
                    app:srcCompat="@drawable/unselecttab" />

            </com.sesolutions.animate.bang.SmallBangView>



        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rlbottomid"
            android:layout_margin="@dimen/margin_half">

           <ProgressBar
                android:id="@+id/sbProgress"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:progress="48"
                android:progressDrawable="@drawable/seekbar_pro5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPercentage"
                style="@style/text_style_light"
                android:layout_below="@+id/sbProgress"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:textSize="13sp"
                android:text="48%"
                android:textStyle="bold" />

            <include
                layout="@layout/layout_bunch_profile_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sbProgress"
                android:layout_toRightOf="@+id/tvPercentage"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin_quarter"
                android:layout_marginTop="@dimen/margin_quarter"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>