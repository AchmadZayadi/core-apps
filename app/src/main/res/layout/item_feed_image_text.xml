<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/font_awesome_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_half">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_feed_upper" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBodyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_full"
            android:paddingEnd="@dimen/margin_full"
            android:paddingLeft="@dimen/margin_full"
            android:paddingRight="@dimen/margin_full"
            android:paddingStart="@dimen/margin_full"
            android:paddingTop="@dimen/margin_full"
            android:text="Text body"
            android:textColor="@color/black"
            android:visibility="gone" />

        <include layout="@layout/layout_multiple_image_feed" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSingleImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxHeight="@dimen/height_image_feed"
            android:maxWidth="@dimen/height_image_feed"
            android:scaleType="center"
            android:visibility="visible" />

<!--        <include layout="@layout/layout_like_share_comment" />-->
        <include layout="@layout/layout_like_share_comment2" />
    </LinearLayout>
</androidx.cardview.widget.CardView>