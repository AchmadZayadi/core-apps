<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ripple_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_full"
    android:layout_marginLeft="@dimen/margin_full"
    android:layout_marginRight="@dimen/margin_full"
    android:layout_marginStart="@dimen/margin_full"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingTop="4dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv1"
        style="@style/text_style_1"
        android:layout_weight="2"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Create By"
        android:textSize="@dimen/body_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv2"
        style="@style/text_style_2"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="your@email.com"
        android:textSize="@dimen/body_1" />

</LinearLayout>