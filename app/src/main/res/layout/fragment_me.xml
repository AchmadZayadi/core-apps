<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:animateLayoutChanges="true"
    android:orientation="vertical">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llReaction"
            android:fitsSystemWindows="false">

            <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/appbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:id="@+id/llCoverPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:animateLayoutChanges="true"
                            app:layout_collapseMode="parallax"
                            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_half"
                                app:tint="@color/white"
                                android:visibility="gone"
                                app:srcCompat="@drawable/arrow_left" />





                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivOption"
                                android:layout_alignParentRight="true"
                                android:visibility="gone"
                                android:layout_alignParentTop="true"
                                android:rotation="90"
                                app:tint="@color/black"
                                android:layout_height="64dp"
                                android:layout_width="@dimen/button_height"
                                android:padding="5dp"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/icblack_dot" />



                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivAlbumImage"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginTop="35dp"
                                android:layout_marginStart="20dp"
                                android:scaleType="centerCrop"
                                tools:src="@tools:sample/avatars" />

                            <RelativeLayout
                                android:layout_toRightOf="@+id/ivAlbumImage"
                                android:layout_width="match_parent"
                                android:layout_marginTop="35dp"
                                android:layout_height="105dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvFollowbtn"
                                    style="@style/text_style_light"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_filled_lover"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:layout_height="28dp"
                                    android:letterSpacing="0.3"
                                    android:padding="@dimen/margin_half"
                                    android:text="+ FOLLOW"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTitle"
                                android:layout_below="@+id/ivAlbumImage"
                                android:textStyle="bold"
                                android:paddingTop="0dp"
                                android:textSize="22sp"
                                android:text=""
                                android:gravity="center"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/margin_half"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </androidx.appcompat.widget.AppCompatTextView>

                            <TextView
                                android:id="@+id/VavciId"
                                android:layout_below="@+id/tvTitle"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:text="ID: "
                                android:gravity="center"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/create"
                                android:visibility="visible"
                                android:layout_marginTop="22dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="You have not created any channel &amp; video yet."
                                android:textSize="@dimen/margin_full"
                                android:layout_marginStart="@dimen/margin_full"
                                android:layout_marginEnd="@dimen/margin_full"
                                android:layout_marginBottom="@dimen/margin_full"
                                android:layout_below="@id/VavciId">

                            </androidx.appcompat.widget.AppCompatTextView>

                            <RelativeLayout
                                android:id="@+id/relativefollowid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/VavciId"
                                >

                                <TextView
                                    android:id="@+id/tvfollowerscount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="20sp"
                                    android:textSize="16sp"
                                    ></TextView>
                                <TextView
                                    android:id="@+id/tvfollowers"
                                    android:layout_toRightOf="@+id/tvfollowerscount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Followers"
                                    android:textColor="@color/backgroundColor"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="22sp"
                                    android:textSize="14sp"
                                    ></TextView>

                                <TextView
                                    android:id="@+id/tvfollowingcount"
                                    android:layout_toRightOf="@+id/tvfollowers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="20sp"
                                    android:textSize="16sp"
                                    ></TextView>

                                <TextView
                                    android:id="@+id/tvfollowing"
                                    android:layout_toRightOf="@+id/tvfollowingcount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Following"
                                    android:textColor="@color/backgroundColor"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="22sp"
                                    android:textSize="14sp"
                                    ></TextView>

                                <TextView
                                    android:id="@+id/tvlikescount"
                                    android:layout_toRightOf="@+id/tvfollowing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="20sp"
                                    android:textSize="16sp"
                                    ></TextView>

                                <TextView
                                    android:id="@+id/tvlikes"
                                    android:layout_toRightOf="@+id/tvlikescount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Likes"
                                    android:textColor="@color/backgroundColor"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="22sp"
                                    android:textSize="14sp"
                                    ></TextView>




                            </RelativeLayout>



                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvSpinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivAlbumImage"
                                app:strokeWidth="1dp"
                                android:visibility="gone"
                                app:strokeColor="@color/black"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="12dp"
                                app:cardCornerRadius="@dimen/margin_half">
                                <com.jaredrummler.materialspinner.MaterialSpinner
                                    android:id="@+id/spinner"
                                    app:ms_arrow_tint="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:layout_height="wrap_content" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:id="@+id/llStats"
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:visibility="gone"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cvSpinner"
                                android:layout_marginBottom="@dimen/margin_full"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvLikes"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_half"
                                    tools:visibility="visible"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="@dimen/margin_full"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="@dimen/margin_half"
                                    android:background="@drawable/rounded_filled_me"
                                    style="@style/text_style_1"
                                    android:gravity="center"
                                    android:textSize="14sp" />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvFollowers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_half"
                                    android:visibility="gone"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="@dimen/margin_full"
                                    tools:visibility="visible"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="@dimen/margin_half"
                                    android:background="@drawable/rounded_filled_me"
                                    style="@style/text_style_1"
                                    android:gravity="center"
                                    android:textSize="14sp" />



                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/llFollow"
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:visibility="gone"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/llStats"
                                android:layout_marginBottom="@dimen/margin_full"
                                android:layout_marginTop="@dimen/margin_half"
                                android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/margin_half"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="@dimen/margin_full"
                                    android:text="Edit Channel"
                                    android:drawablePadding="4dp"
                                    android:background="@drawable/corner_point_shagun_lover"
                                    android:textColor="#ED008C"
                                    android:drawableTint="#ED008C"
                                    android:gravity="center"
                                    android:drawableStart="@drawable/ic_pencil"
                                    android:textSize="11.5sp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvAdd"
                                    style="@style/text_style_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_full"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_filled_lover"
                                    android:drawableStart="@drawable/plus"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:padding="@dimen/margin_half"
                                    android:text="Add New Channel"
                                    android:textSize="11.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>




                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/font_awesome_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/appbar"
                        android:animateLayoutChanges="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:id="@+id/di2v"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#c5c5c5" />
                            <LinearLayout
                                android:id="@+id/llTop"
                                android:layout_below="@+id/di2v"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <!--  <androidx.appcompat.widget.AppCompatImageView
                                      android:id="@+id/ivPlay"
                                      android:layout_width="0dp"
                                      android:layout_height="42dp"
                                      android:padding="10dp"
                                      app:srcCompat="@drawable/ic_me_play"
                                      android:tint="@color/colorPrimary"
                                      android:layout_weight="1">
                                  </androidx.appcompat.widget.AppCompatImageView>-->

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    >

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/ivPlay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="42dp"
                                        android:text="VIDEOS"
                                        android:layout_centerHorizontal="true"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:padding="10dp"
                                        ></androidx.appcompat.widget.AppCompatTextView>

                                    <View
                                        android:id="@+id/view21"
                                        android:layout_width="110dp"
                                        android:layout_height="2dp"
                                        android:layout_centerHorizontal="true"
                                        android:background="@color/gray"
                                        android:layout_alignParentBottom="true"
                                        ></View>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    >


                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/ivHeart"
                                        android:layout_width="wrap_content"
                                        android:layout_height="42dp"
                                        android:text="LIKES"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:layout_centerHorizontal="true"
                                        android:textColor="@color/gray"
                                        android:layout_weight="1"
                                        android:padding="10dp"
                                        ></androidx.appcompat.widget.AppCompatTextView>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:id="@+id/tvFoll"
                                        android:visibility="gone"
                                        android:textColor="@color/gray"
                                        android:layout_centerVertical="true"
                                        android:layout_marginBottom="2dp"
                                        android:text="23"
                                        android:layout_toEndOf="@id/ivHeart"
                                        android:textSize="18sp">
                                    </androidx.appcompat.widget.AppCompatTextView>


                                    <View
                                        android:id="@+id/view22"
                                        android:layout_width="110dp"
                                        android:layout_height="2dp"
                                        android:layout_centerHorizontal="true"
                                        android:background="@color/gray"
                                        android:layout_alignParentBottom="true"
                                        ></View>

                                </RelativeLayout>

                                <!--  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_weight="1"
                                      android:layout_height="match_parent">



                                   &lt;!&ndash;   <androidx.appcompat.widget.AppCompatImageView
                                          android:id="@+id/ivHeart"
                                          android:layout_width="42dp"
                                          android:padding="6dp"
                                          android:layout_centerInParent="true"
                                          android:layout_height="42dp"
                                          android:visibility="visible"
                                          app:srcCompat="@drawable/ic_followers_me">

                                      </androidx.appcompat.widget.AppCompatImageView>&ndash;&gt;
  &lt;!&ndash;
                                      <androidx.appcompat.widget.AppCompatTextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_centerInParent="true"
                                          android:textStyle="bold"
                                          android:id="@+id/tvFoll"
                                          android:layout_toRightOf="@id/ivHeart"
                                          android:textSize="18sp">

                                      </androidx.appcompat.widget.AppCompatTextView>&ndash;&gt;
                                  </RelativeLayout>-->
                            </LinearLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/llTop"
                                android:layout_marginTop="@dimen/margin_half"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_offset" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvNoData"
                                style="@style/text_style_2"
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/llTop"
                                android:layout_centerHorizontal="true"
                                android:padding="@dimen/margin_full"
                                android:paddingTop="@dimen/margin_half"
                                android:layout_marginTop="70dp"
                                android:text="No Data found"
                                android:textSize="@dimen/sub_heading" />

                            <include layout="@layout/progress_view" />

                            <ProgressBar
                                android:id="@+id/pb"
                                android:layout_width="@dimen/button_height_small"
                                android:layout_height="@dimen/button_height_small"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:progressTint="@color/color_facebook"
                                android:visibility="gone" />
                        </RelativeLayout>

                    </RelativeLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>
