<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llQuoteMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_half"
    android:orientation="vertical"
    android:visibility="gone">


    <RelativeLayout
        android:id="@+id/rlQuoteMedia"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_marginTop="@dimen/margin_half">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivQuoteImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivQuoteMediaType"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:srcCompat="@drawable/play" />
    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuoteTitle"
        style="@style/text_style_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_half"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/margin_full"
        android:paddingRight="@dimen/margin_full"
        android:textSize="@dimen/body_1"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuoteDesc"
        style="@style/text_style_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_quarter"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingLeft="@dimen/margin_full"
        android:paddingRight="@dimen/margin_full"
        android:textSize="@dimen/body_1" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuoteCategory"
        style="@style/text_style_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_quarter"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/margin_full"
        android:paddingRight="@dimen/margin_full"
        android:textSize="@dimen/body_1" />

    <!--  <android.support.v7.widget.AppCompatTextView
          android:id="@+id/tvQuoteTags"
          style="@style/text_style_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/margin_half"
          android:layout_marginTop="@dimen/margin_quarter"
          android:textSize="@dimen/body_1" />-->

</androidx.appcompat.widget.LinearLayoutCompat>
