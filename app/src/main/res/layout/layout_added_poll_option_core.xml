<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_full"
    android:layout_marginLeft="@dimen/margin_full"
    android:layout_marginTop="@dimen/margin_half"
    android:layout_marginEnd="@dimen/margin_full"
    android:layout_marginRight="@dimen/margin_full"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPollImage"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivRemove"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_below="@+id/ivPollImage"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_half"
        app:srcCompat="@drawable/cross" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPollImage"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/ivRemove"
        android:layout_toRightOf="@+id/ivRemove"
        android:background="@drawable/rounded_holo_border_grey_light">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="72sp"
            android:layout_marginRight="72sp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="@string/option"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:padding="@dimen/margin_half" />

