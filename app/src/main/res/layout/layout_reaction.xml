<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutAnimation="@anim/anim_fall_down">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvMain"
        style="@style/Card_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_full"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_full"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layoutAnimation="@anim/anim_fall_down"
        android:orientation="vertical"
        app:cardCornerRadius="24dp"
        app:cardElevation="@dimen/margin_quarter">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:layout_margin="@dimen/margin_half">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reaction1"
                style="@style/image_reaction"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reaction2"
                style="@style/image_reaction" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reaction3"
                style="@style/image_reaction" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reaction4"
                style="@style/image_reaction" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reaction5"
                style="@style/image_reaction" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reaction6"
                style="@style/image_reaction" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reaction7"
                style="@style/image_reaction"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reaction8"
                style="@style/image_reaction"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reaction9"
                style="@style/image_reaction"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reaction10"
                style="@style/image_reaction"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>