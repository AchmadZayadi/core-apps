<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlNonVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llReaction">

            <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fitsSystemWindows="true">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:stateListAnimator="@null"
                    android:theme="@style/ActionBarTheme">

                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/collapsing_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:expandedTitleMarginStart="@dimen/margin_full"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        app:title=" ">

                        <RelativeLayout
                            android:id="@+id/rlQuoteMedia"
                            style="@style/Main_style"
                            android:layout_width="match_parent"
                            android:layout_height="250sp"
                            app:layout_collapseMode="parallax">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivCoverPhoto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom"
                                android:background="@drawable/scrim" />


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivCamera"
                                android:layout_width="36sp"
                                android:layout_height="36sp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="end"
                                android:layout_marginTop="174sp"
                                android:padding="10sp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ses_camera" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTitle"
                                style="@style/text_style_light"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="@dimen/margin_super"
                                android:layout_marginRight="@dimen/margin_super"
                                android:layout_marginBottom="@dimen/margin_super"
                                android:textSize="@dimen/heading" />

                            <com.sesolutions.ui.customviews.VideoEnabledWebView
                                android:id="@+id/wbVideo"
                                android:layout_width="match_parent"
                                android:layout_height="250sp"
                                android:background="@color/black"
                                android:visibility="gone" />

                        </RelativeLayout>


                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            app:layout_collapseMode="pin"
                            app:popupTheme="@style/ToolbarTheme" />

                    </com.google.android.material.appbar.CollapsingToolbarLayout>

                </com.google.android.material.appbar.AppBarLayout>


                <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/font_awesome_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvDetail"
                            style="@style/Card_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_half"
                                android:paddingBottom="@dimen/margin_half">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/ivUserImage"
                                    android:layout_width="48sp"
                                    android:layout_height="48sp"
                                    android:layout_marginStart="@dimen/margin_full"
                                    android:layout_marginLeft="@dimen/margin_full"
                                    android:layout_marginBottom="@dimen/margin_half" />


                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/llAlbumDetail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/ivUserImage"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/margin_full">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/margin_full">

                                        <!--  <android.support.v7.widget.LinearLayoutCompat
                                              android:layout_width="wrap_content"

                                              android:layout_height="wrap_content"
                                              android:layout_weight="1">-->


                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/ivUserTitle"
                                            style="@style/text_style_2"
                                            android:layout_width="wrap_content" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvUserTitle"
                                            style="@style/text_style_2"
                                            android:layout_marginLeft="@dimen/margin_quarter"
                                            android:ellipsize="end"
                                            android:maxLines="1" />
                                        <!--    </android.support.v7.widget.LinearLayoutCompat>-->

                                        <!--  <android.support.v7.widget.LinearLayoutCompat
                                              android:id="@+id/llStar"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:layout_below="@+id/llAlbumDetail"
                                              android:layout_centerHorizontal="true"
                                              android:visibility="gone">

                                              <android.support.v7.widget.AppCompatImageView
                                                  android:id="@+id/ivStar1"
                                                  style="@style/image_star"
                                                  android:layout_width="@dimen/size_star_music"
                                                  android:layout_height="@dimen/size_star_music"
                                                  android:layout_marginLeft="@dimen/margin_star"
                                                  android:layout_marginRight="@dimen/margin_star"
                                                  app:srcCompat="@drawable/star_unfilled"
                                                  app:tint="@color/colorPrimary" />

                                              <android.support.v7.widget.AppCompatImageView
                                                  android:id="@+id/ivStar2"
                                                  style="@style/image_star"
                                                  android:layout_width="@dimen/size_star_music"
                                                  android:layout_height="@dimen/size_star_music"
                                                  android:layout_marginLeft="@dimen/margin_star"
                                                  android:layout_marginRight="@dimen/margin_star"
                                                  app:srcCompat="@drawable/star_unfilled"
                                                  app:tint="@color/colorPrimary" />

                                              <android.support.v7.widget.AppCompatImageView
                                                  android:id="@+id/ivStar3"
                                                  style="@style/image_star"
                                                  android:layout_width="@dimen/size_star_music"
                                                  android:layout_height="@dimen/size_star_music"
                                                  android:layout_marginLeft="@dimen/margin_star"
                                                  android:layout_marginRight="@dimen/margin_star"
                                                  app:srcCompat="@drawable/star_unfilled"
                                                  app:tint="@color/colorPrimary" />

                                              <android.support.v7.widget.AppCompatImageView
                                                  android:id="@+id/ivStar4"
                                                  style="@style/image_star"
                                                  android:layout_width="@dimen/size_star_music"
                                                  android:layout_height="@dimen/size_star_music"
                                                  android:layout_marginLeft="@dimen/margin_star"
                                                  android:layout_marginRight="@dimen/margin_star"
                                                  app:srcCompat="@drawable/star_unfilled"
                                                  app:tint="@color/colorPrimary" />

                                              <android.support.v7.widget.AppCompatImageView
                                                  android:id="@+id/ivStar5"
                                                  style="@style/image_star"
                                                  android:layout_width="@dimen/size_star_music"
                                                  android:layout_height="@dimen/size_star_music"
                                                  android:layout_marginLeft="@dimen/margin_star"
                                                  android:layout_marginRight="@dimen/margin_star"
                                                  app:srcCompat="@drawable/star_unfilled"
                                                  app:tint="@color/colorPrimary" />


                                          </android.support.v7.widget.LinearLayoutCompat>-->

                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_marginTop="@dimen/margin_quarter">


                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/ivAlbumDate"
                                            style="@style/text_style_2"
                                            android:layout_width="wrap_content"
                                            android:textSize="@dimen/body_1" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvAlbumDate"
                                            style="@style/text_style_2"
                                            android:layout_marginLeft="@dimen/margin_quarter"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:textSize="@dimen/body_1" />

                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvAlbumDetail"
                                        style="@style/text_style_stats"
                                        android:layout_marginTop="@dimen/margin_quarter"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/caption" />


                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/llAlbumDetail"
                                    android:layout_margin="@dimen/margin_full"
                                    android:orientation="vertical">

                                    <View style="@style/divider" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvQuoteBy"
                                        style="@style/text_style_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_half"
                                        android:layout_toLeftOf="@+id/ivLike"
                                        android:layout_toRightOf="@+id/ivProfile"
                                        android:textStyle="bold" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvDesc"
                                        style="@style/text_style_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_quarter"
                                        android:textSize="@dimen/body_1" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvSource"
                                        style="@style/text_style_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_half"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:textSize="@dimen/caption" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvCategory"
                                        style="@style/text_style_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_half"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:textSize="@dimen/caption" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvTags"
                                        style="@style/text_style_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_half"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:textSize="@dimen/body_1"
                                        android:textStyle="bold" />

                                </androidx.appcompat.widget.LinearLayoutCompat>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <include layout="@layout/progress_view" />

                    </RelativeLayout>

                </androidx.core.widget.NestedScrollView>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <include layout="@layout/layout_like_favorite_comment" />
    </RelativeLayout>

    <include layout="@layout/layout_full_video" />

</RelativeLayout>
