<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llReaction"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ActionBarTheme">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:contentInsetEnd="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetStart="0dp"
                android:tag="@string/tag_toolbar"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <!--
                                app:layout_scrollFlags="scroll|enterAlways"
                -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivBack"
                        style="@style/button_image_toolbar"
                        app:srcCompat="@drawable/arrow_left" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTitle"
                        style="@style/text_style_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="96dp"
                        android:layout_marginRight="96dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivShare"
                            style="@style/button_image_toolbar"
                            android:layout_toLeftOf="@+id/ivOption"
                            android:layout_toStartOf="@+id/ivOption"
                            android:visibility="visible"
                            app:srcCompat="@drawable/share_music" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivOption"
                            style="@style/button_image_toolbar"
                            app:srcCompat="@drawable/vertical_dots" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/llDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_full"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvListingTitle"
                                style="@style/text_style_1"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="@dimen/sub_heading"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPrice"
                                style="@style/text_style_2"
                                android:layout_width="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="@dimen/sub_heading"
                                android:textStyle="bold" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_half">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/ivUser"
                                style="@style/text_style_2"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/caption" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvUser"
                                style="@style/text_style_2"
                                android:layout_marginLeft="@dimen/margin_quarter"
                                android:layout_marginStart="@dimen/margin_quarter"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textSize="@dimen/caption" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_quarter">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/ivLocation"
                                style="@style/text_style_2"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/caption" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvLocation"
                                style="@style/text_style_2"
                                android:layout_marginLeft="@dimen/margin_quarter"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="@dimen/caption" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDetail"
                            style="@style/text_style_stats"
                            android:layout_marginTop="@dimen/margin_quarter"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/caption" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTags"
                            style="@style/text_style_stats"
                            android:layout_marginTop="@dimen/margin_quarter"
                            android:ellipsize="end"
                            android:textSize="@dimen/caption" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_full"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginLeft="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_marginStart="@dimen/margin_full"
                        android:adjustViewBounds="true" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvListingDetail"
                        style="@style/text_style_1"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/margin_full"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:autoLink="web"
                        android:layout_marginLeft="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_marginStart="@dimen/margin_full"
                        android:layout_weight="1"
                        android:textSize="@dimen/sub_heading" />

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <include layout="@layout/layout_like_favorite_comment" />

</RelativeLayout>
