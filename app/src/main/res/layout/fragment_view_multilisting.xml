<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >
<RelativeLayout
    android:id="@+id/rlMain"
    style="@style/Main_style"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <include
        layout="@layout/layout_toolbar"></include>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_40ssp"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_welcome"
            />

        <View
            android:id="@+id/vShadow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/transparent_black_light" />


        <TextView
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="$59,15.00"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"
            android:textColor="@color/white"
            android:layout_marginRight="-2dp"
            android:textSize="18dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="30dp"
            android:background="@drawable/label_backgroundst"

            ></TextView>

        <TextView
            android:id="@+id/titleid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textSize="13sp"
            android:layout_below="@+id/ivImage"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto_medium"
            ></TextView>


        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/ivImage"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            style="@style/ReviewRatingBar2"
            android:progressTint="@color/contest_type"
            android:rating="3"
            />


        <TextView
            android:id="@+id/titleid_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vivo C21Y (Cross Black, 64 GB 4 GB RAM)"
            android:layout_below="@+id/titleid"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:textColor="#262626"
            android:fontFamily="@font/roboto_medium"
            ></TextView>


        <LinearLayout
            android:id="@+id/sharelinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/titleid_des"
            >
            <TextView
                android:id="@+id/writtenbyid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by Larry Mack"
                android:textSize="13sp"
                android:layout_below="@+id/titleid_des"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textColor="#828282"
                android:fontFamily="@font/roboto_regular"
                ></TextView>
            <LinearLayout
                android:id="@+id/llbottomid"
                android:layout_width="0dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivFbShare"
                    android:layout_width="@dimen/height_icon_feed_option_home"
                    android:layout_height="@dimen/height_icon_feed_option_home"
                    android:layout_marginEnd="@dimen/margin_full"
                    android:layout_marginRight="@dimen/margin_full"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/ic_facebook" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivWhatsAppShare"
                    android:layout_width="@dimen/height_icon_feed_option_home"
                    android:layout_height="@dimen/height_icon_feed_option_home"
                    android:layout_marginEnd="@dimen/margin_full"
                    android:layout_marginRight="@dimen/margin_full"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/whatsapp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivImageShare"
                    android:layout_width="@dimen/height_icon_feed_option_home"
                    android:layout_height="@dimen/height_icon_feed_option_home"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/ic_share" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addfavidll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/sharelinearlayout"
            >
               <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_tabs_multistore"
                    android:layout_marginLeft="@dimen/margin_full"
                    android:layout_marginRight="@dimen/margin_full"
                    >
                    <ImageView
                        android:id="@+id/favicon"
                        android:layout_width="13sp"
                        android:layout_centerVertical="true"
                        android:layout_height="13sp"
                        android:src="@drawable/add_24dp"
                        app:tint="@color/white"></ImageView>

                    <TextView
                        android:layout_toRightOf="@+id/favicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_quarter"
                        android:text="Add Wishlist"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        ></TextView>
                </RelativeLayout>
               <RelativeLayout
                    android:layout_width="45dp"
                    android:gravity="center"
                    android:layout_height="40dp"
                    android:background="@drawable/button_multistore_transprent"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:layout_marginRight="@dimen/margin_medium"
                    >
                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="13sp"
                        android:layout_centerVertical="true"
                        android:layout_height="13sp"
                        android:src="@drawable/like_poll"
                        app:tint="@color/bulecolor"></ImageView>


                </RelativeLayout>
               <RelativeLayout
                    android:layout_width="45dp"
                    android:gravity="center"
                    android:layout_height="40dp"
                    android:background="@drawable/button_multistore_transprent"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:layout_marginRight="@dimen/margin_full"
                    >
                    <ImageView
                        android:id="@+id/like2"
                        android:layout_width="13sp"
                        android:layout_centerVertical="true"
                        android:layout_height="13sp"
                        android:src="@drawable/favraite_selected"
                        app:tint="@color/bulecolor"></ImageView>


                </RelativeLayout>



        </LinearLayout>

        <View
            android:id="@+id/viewid21"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/addfavidll"
            android:background="#DBDBDB"
            android:layout_marginTop="@dimen/margin_medium"
            ></View>

        <TextView
            android:id="@+id/descriptiontagid"
            android:layout_below="@+id/viewid21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#989898"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half"
            android:text="It is a long established fact that a reader will be distract
by the readable content of a page when looking at its ob
layout. The point of using Lorem Ipsum is that it hased
more-or-less normal distribution of letters, as opposede
to using Content here, content here making it look like is
readable English. Many desktop publishing packagesed
and web page editors now use Lorem Ipsum as theirs a
default model text, and a search for Various versions
have evolved over the years."
            android:textSize="14sp"
            ></TextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStats"
            android:layout_below="@+id/descriptiontagid"
            style="@style/text_style_2"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginLeft="@dimen/margin_half"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0 likes, 2 comments, 3 views"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/caption"/>


        <View
            android:id="@+id/viewid25"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tvStats"
            android:layout_marginTop="@dimen/margin_quarter"
            android:background="#DBDBDB"
            ></View>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            style="@style/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/viewid25"
            android:background="@color/white"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/text_color_1" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabs"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>

</RelativeLayout>
</androidx.core.widget.NestedScrollView>