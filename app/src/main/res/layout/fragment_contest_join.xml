<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_toolbar" />

    <!-- <android.support.v7.widget.CardView
         android:id="@+id/cvHeader"
         style="@style/Card_style"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/appBar">-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llHeader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:animateLayoutChanges="true"
        android:paddingBottom="@dimen/margin_half">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivHeader1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/contest_step" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivHeader2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_stepper_contest"
            android:layout_marginStart="@dimen/margin_stepper_contest"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/contest_step" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivHeader3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_stepper_contest"
            android:layout_marginStart="@dimen/margin_stepper_contest"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/contest_step" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:animateLayoutChanges="true"
        android:paddingBottom="@dimen/margin_half"
        android:visibility="invisible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeader1"
            style="@style/text_style_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_weight="1"

            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Contest Rules"
            android:textSize="@dimen/body_1" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeader2"
            style="@style/text_style_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_stepper_contest"
            android:layout_marginStart="@dimen/margin_stepper_contest"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Registration"
            android:textSize="@dimen/body_1" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeader3"
            style="@style/text_style_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_stepper_contest"
            android:layout_marginStart="@dimen/margin_stepper_contest"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Upload Content"
            android:textSize="@dimen/body_1" />


    </androidx.appcompat.widget.LinearLayoutCompat>
    <!-- </android.support.v7.widget.CardView>-->

    <FrameLayout
        android:id="@+id/rule_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llButton"
        android:layout_below="@+id/llHeader" />

    <RelativeLayout
        android:id="@+id/llButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPrev"
            style="@style/ripple_selector"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:padding="13dp"
            android:rotation="180"
            android:src="@drawable/right_nav"
            android:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNext"
            style="@style/ripple_selector"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="13dp"
            android:src="@drawable/right_nav"
            android:tint="@color/white" />

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_half"
            app:piv_animationType="thinWorm"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_padding="3dp"
            app:piv_radius="3dp"
            app:piv_selectedColor="@color/white"
            app:piv_unselectedColor="@color/dividerColor" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNext"
            style="@style/text_style_light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivNext"
            android:layout_toStartOf="@id/ivNext"
            android:gravity="center"
            android:textSize="@dimen/body_1" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrev"
            style="@style/text_style_light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivPrev"
            android:layout_toRightOf="@+id/ivPrev"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/body_1" />


    </RelativeLayout>

</RelativeLayout>