<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4sp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/realtive_parentid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/titleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_toStartOf="@+id/ratingBar2"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:textSize="12sp"
            android:textColor="@color/black_81"
            android:layout_toLeftOf="@+id/addachivements"
            android:text="Manage Achivements"
            ></TextView>


        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/optionmenu"
            android:layout_marginRight="5dp"
            style="@style/ReviewRatingBar2"
            android:progressTint="@color/contest_type"
            android:rating="0"
            />

        <ImageView
            android:id="@+id/optionmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icblack_dot"
            android:layout_alignParentRight="true"
            android:rotation="90"
            android:layout_gravity="center_vertical"
            ></ImageView>

    </RelativeLayout>


</RelativeLayout>