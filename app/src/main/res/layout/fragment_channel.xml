<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llReaction"
            android:fitsSystemWindows="false">

            <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/appbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <RelativeLayout
                            android:id="@+id/llCoverPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:animateLayoutChanges="true"
                            app:layout_collapseMode="parallax"
                            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivBack"
                                android:tint="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_half"
                                app:srcCompat="@drawable/arrow_left" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/create"
                                android:visibility="gone"
                                tools:visibility="visible"
                                android:layout_marginTop="42dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You have not created any channel yet. Tap on Add to create one?"
                                android:textSize="@dimen/margin_full"
                                android:layout_marginStart="@dimen/margin_full"
                                android:layout_marginEnd="@dimen/margin_full"
                                android:layout_marginBottom="@dimen/margin_full"
                                android:layout_below="@id/llFollow">

                            </androidx.appcompat.widget.AppCompatTextView>
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivOption"
                                android:layout_alignParentRight="true"
                                android:visibility="gone"
                                android:layout_alignParentTop="true"
                                android:rotation="90"
                                app:tint="@color/black"
                                android:layout_height="64dp"
                                style="@style/button_image_toolbar"
                                app:srcCompat="@drawable/vertical_dots" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/llAlbumImage"
                                android:layout_width="125dp"
                                android:layout_marginTop="32dp"
                                android:layout_height="125dp"
                                android:layout_marginBottom="@dimen/margin_full"
                                android:layout_centerHorizontal="true"
                                app:cardCornerRadius="@dimen/margin_full">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivAlbumImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    tools:src="@tools:sample/avatars" />


                            </androidx.cardview.widget.CardView>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTitle"
                                android:layout_below="@+id/llAlbumImage"
                                style="@style/text_style_1"
                                android:textStyle="bold"
                                tools:text="test channel"
                                android:layout_marginBottom="@dimen/margin_full"
                                android:layout_marginTop="@dimen/margin_half"
                                android:layout_width="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_height="wrap_content">

                            </androidx.appcompat.widget.AppCompatTextView>
                            <LinearLayout
                                android:id="@+id/llStats"
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/llAlbumImage"
                                android:visibility="gone"
                                android:layout_marginBottom="@dimen/margin_full"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvLikes"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_half"
                                    tools:visibility="visible"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="@dimen/margin_full"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="@dimen/margin_half"
                                    android:background="@drawable/rounded_filled_me"
                                    style="@style/text_style_1"
                                    android:gravity="center"
                                    android:textSize="14sp" />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvFollowers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_half"
                                    android:visibility="gone"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="@dimen/margin_full"
                                    tools:visibility="visible"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="@dimen/margin_half"
                                    android:background="@drawable/rounded_filled_me"
                                    style="@style/text_style_1"
                                    android:gravity="center"
                                    android:textSize="14sp" />



                            </LinearLayout><LinearLayout
                            android:id="@+id/llFollow"
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_below="@id/llStats"
                            android:layout_marginBottom="@dimen/margin_full"
                            android:layout_marginTop="@dimen/margin_half"
                            android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:padding="@dimen/margin_half"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:textStyle="bold"
                                android:layout_marginEnd="@dimen/margin_full"
                                android:text="Edit Channel"
                                android:drawablePadding="4dp"
                                android:background="@drawable/corner_point_shagun_lover"
                                android:textColor="#ED008C"
                                android:drawableTint="#ED008C"
                                android:gravity="center"
                                android:drawableStart="@drawable/ic_pencil"
                                android:textSize="11.5sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvAdd"
                                style="@style/text_style_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_full"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_filled_lover"
                                android:drawableStart="@drawable/plus"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/margin_half"
                                android:text="Add New Channel"
                                android:textSize="11.5sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>




                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/font_awesome_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/appbar"
                        android:animateLayoutChanges="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:id="@+id/di2v"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#c5c5c5" />
                            <LinearLayout
                                android:id="@+id/llTop"
                                android:layout_below="@+id/di2v"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@color/white"
                                android:weightSum="2">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivPlay"
                                    android:layout_width="0dp"
                                    android:layout_height="42dp"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/ic_me_play"
                                    android:layout_weight="1">

                                </androidx.appcompat.widget.AppCompatImageView>
                                <View
                                    android:id="@+id/div"
                                    android:layout_width="1dp"
                                    android:layout_gravity="center"
                                    android:layout_height="30dp"
                                    android:background="#c5c5c5" />
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ivHeart"
                                        android:layout_width="42dp"
                                        android:padding="6dp"
                                        android:layout_centerInParent="true"
                                        android:layout_height="42dp"
                                        android:visibility="visible"
                                        app:srcCompat="@drawable/ic_followers_me">

                                    </androidx.appcompat.widget.AppCompatImageView>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:textStyle="bold"
                                        android:id="@+id/tvFoll"
                                        android:text=""
                                        android:layout_toEndOf="@id/ivHeart"
                                        android:textSize="18sp">

                                    </androidx.appcompat.widget.AppCompatTextView>
                                </RelativeLayout>
                            </LinearLayout>

                            <View
                                style="@style/divider"
                                android:layout_below="@+id/llTop" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/llTop"
                                android:layout_marginTop="@dimen/margin_half"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_offset" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvNoData"
                                style="@style/text_style_2"
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/llTop"
                                android:layout_centerHorizontal="true"
                                android:padding="@dimen/margin_full"
                                android:paddingTop="@dimen/margin_half"
                                android:textSize="@dimen/body_1"
                                android:visibility="gone" />

                            <include layout="@layout/progress_view" />

                            <ProgressBar
                                android:id="@+id/pb"
                                android:layout_width="@dimen/button_height_small"
                                android:layout_height="@dimen/button_height_small"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:progressTint="@color/color_facebook"
                                android:visibility="gone" />
                        </RelativeLayout>

                    </RelativeLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>
