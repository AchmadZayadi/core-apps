<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_dialog"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlHeader"
        style="@style/Forground_style"
        android:layout_width="@dimen/width_dialog"
        android:layout_height="wrap_content"
        android:layout_margin="0.2dp"
        android:gravity="center_vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/text_style_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            android:text="@string/select_privacy"
            android:textSize="@dimen/body_1"
            android:textStyle="bold" />

        <View
            android:id="@+id/v1"
            style="@style/divider"
            android:layout_below="@+id/tvTitle" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v1"
            android:padding="@dimen/margin_medium">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivImage"
                android:layout_width="56sp"
                android:layout_height="56sp"
                android:layout_marginEnd="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_half" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMsg"
                style="@style/text_style_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivImage"
                android:layout_toRightOf="@+id/ivImage"
                android:text="@string/select_privacy"
                android:textSize="@dimen/body_1" />

            <com.sesolutions.ui.customviews.MultiSelectionSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMsg"
                android:layout_marginBottom="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_toEndOf="@+id/ivImage"
                android:layout_toRightOf="@+id/ivImage" />


        </RelativeLayout>

        <View
            android:id="@+id/v2"
            style="@style/divider"
            android:layout_below="@+id/rl1" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v2"
            android:gravity="end">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bCancel"
                android:layout_width="@dimen/button_weight_friend"
                android:layout_height="@dimen/button_height_friend"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/v2"
                android:layout_margin="@dimen/margin_half"
                android:layout_toLeftOf="@+id/bSubmit"
                android:layout_toStartOf="@+id/bSubmit"
                android:background="@drawable/rounded_holo_border_primary"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/body_1" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bSubmit"
                android:layout_width="@dimen/button_weight_friend"
                android:layout_height="@dimen/button_height_friend"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/v2"
                android:layout_marginBottom="@dimen/margin_half"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_half"
                android:background="@drawable/rounded_filled"
                android:maxLines="1"
                android:text="@string/txt_submit"
                android:textAllCaps="false"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/body_1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

    <include layout="@layout/progress_view" />


</LinearLayout>