<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ripple_selector"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_staggered_image_merged"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivImage11"
        style="@style/ripple_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_staggered"
        android:layout_weight="2"
        android:scaleType="centerCrop" />

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/ripple_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_staggered"
        android:layout_marginTop="@dimen/margin_staggered"
        android:layout_weight="3">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage12"
            style="@style/ripple_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_staggered"
            android:layout_marginLeft="@dimen/margin_staggered"
            android:layout_marginRight="@dimen/margin_staggered"
            android:layout_marginStart="@dimen/margin_staggered"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage13"
            style="@style/ripple_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_staggered"
            android:layout_marginLeft="@dimen/margin_staggered"
            android:layout_marginRight="@dimen/margin_staggered"
            android:layout_marginStart="@dimen/margin_staggered"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage14"
            style="@style/ripple_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_staggered"
            android:layout_marginLeft="@dimen/margin_staggered"
            android:layout_marginRight="@dimen/margin_staggered"
            android:layout_marginStart="@dimen/margin_staggered"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>