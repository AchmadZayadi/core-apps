<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlProfiles"
    android:gravity="end"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile1"
        android:layout_width="@dimen/size_bunch_profile_image"
        android:layout_height="@dimen/size_bunch_profile_image"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/white"
        app:civ_border_width="2sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile2"
        android:layout_width="@dimen/size_bunch_profile_image"
        android:layout_height="@dimen/size_bunch_profile_image"
        android:layout_marginLeft="-8sp"
        android:layout_marginStart="-8sp"
        android:layout_toEndOf="@+id/ivProfile1"
        android:layout_toRightOf="@+id/ivProfile1"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/white"
        app:civ_border_width="2sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile3"
        android:layout_width="@dimen/size_bunch_profile_image"
        android:layout_height="@dimen/size_bunch_profile_image"
        android:layout_marginLeft="-8sp"
        android:layout_marginStart="-8sp"
        android:layout_toEndOf="@+id/ivProfile2"
        android:layout_toRightOf="@+id/ivProfile2"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/white"
        app:civ_border_width="2sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile4"
        android:layout_width="@dimen/size_bunch_profile_image"
        android:layout_height="@dimen/size_bunch_profile_image"
        android:layout_marginLeft="-8sp"
        android:layout_marginStart="-8sp"
        android:layout_toEndOf="@+id/ivProfile3"
        android:layout_toRightOf="@+id/ivProfile3"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/white"
        app:civ_border_width="2sp" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfile5"
        android:layout_width="@dimen/size_bunch_profile_image"
        android:layout_height="@dimen/size_bunch_profile_image"
        android:layout_marginLeft="-8sp"
        android:layout_marginStart="-8sp"
        android:layout_toEndOf="@+id/ivProfile3"
        android:layout_toRightOf="@+id/ivProfile3"
        android:background="@drawable/circle_cross"
        android:padding="6sp"
        android:visibility="visible"
        app:srcCompat="@drawable/add_24dp" />
</RelativeLayout>
