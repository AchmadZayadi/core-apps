<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_black"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layoutAnimation="@anim/anim_fall_down"
        android:orientation="vertical"
        android:paddingStart="@dimen/item_offset"
        android:paddingLeft="@dimen/item_offset"
        android:paddingTop="64dp"
        android:paddingEnd="@dimen/item_offset"
        android:paddingRight="@dimen/item_offset"
        android:paddingBottom="@dimen/item_offset"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_wallaper_big" />

    <include layout="@layout/layout_no_data" />

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="@dimen/button_height_small"
        android:layout_height="@dimen/button_height_small"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/rlCommentEdittext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_half"
        app:cardBackgroundColor="@color/text_color_1"
        app:cardElevation="@dimen/margin_half">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                style="@style/ripple_selector"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:padding="14dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/arrow_left" />

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/ripple_selector"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:padding="14dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ses_places_ic_search" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etMusicSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_search_drawer"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:hint="@string/search"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white_40"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/body_1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCancel"
                style="@style/ripple_selector"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="14dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/cross" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMic"
                style="@style/ripple_selector"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="14dp"
                android:tint="@color/white"
                android:visibility="visible"
                app:srcCompat="@drawable/ses_microphone" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>


</RelativeLayout>