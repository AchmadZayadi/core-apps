<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llReaction"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:stateListAnimator="@null"
            android:theme="@style/ActionBarTheme">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleMarginStart="@dimen/margin_full"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title=" "
                app:titleEnabled="false">

                <RelativeLayout
                    android:id="@+id/llCoverPhoto"
                    style="@style/Background_style"
                    android:layout_width="match_parent"
                    android:layout_height="320sp"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/scrim" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCamera"
                        android:layout_width="18sp"
                        android:layout_height="18sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="182sp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ses_camera" />
                    <!-- <android.support.v7.widget.CardView
                         android:id="@+id/cvDetail"
                         android:layout_width="match_parent"
                         style="@style/Card_style"
                         android:layout_height="wrap_content"
                         android:layout_below="@+id/ivCoverPhoto">
 -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <!-- <android.support.v7.widget.AppCompatTextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:padding="@dimen/margin_half"
                             android:textColor="@color/black_87"
                             android:textSize="@dimen/sub_title" />-->

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cardview_shadow_start_color4"
                        ></View>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_above="@+id/titleplaylistid"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_half"
                        android:layout_marginBottom="@dimen/margin_quarter"
                        app:cardCornerRadius="@dimen/margin_half"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivCoverPhoto"
                            android:layout_width="150dp"
                            android:layout_height="140sp"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/titleplaylistid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Alende"
                        android:textSize="@dimen/title"
                        android:layout_above="@+id/discritpionstid"
                        android:textColor="@color/black_81"
                        android:fontFamily="@font/roboto_bold"
                        ></TextView>

                    <TextView
                        android:id="@+id/discritpionstid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/llStar"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/black_81"
                        android:text="2.7M+ Followers | 237M + PLays"
                        android:textSize="@dimen/sub_heading_normal"
                        android:fontFamily="@font/roboto_bold"
                        ></TextView>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llStar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/bottombtn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_quarter"
                        android:layout_marginBottom="@dimen/margin_quarter"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar1"
                            android:layout_width="@dimen/size_star_song"
                            android:layout_height="@dimen/size_star_song"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/ss_progress_startColor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar2"
                            android:layout_width="@dimen/size_star_song"
                            android:layout_height="@dimen/size_star_song"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/ss_progress_startColor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar3"
                            android:layout_width="@dimen/size_star_song"
                            android:layout_height="@dimen/size_star_song"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/ss_progress_startColor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar4"
                            android:layout_width="@dimen/size_star_song"
                            android:layout_height="@dimen/size_star_song"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/ss_progress_startColor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar5"
                            android:layout_width="@dimen/size_star_song"
                            android:layout_height="@dimen/size_star_song"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/ss_progress_startColor" />


                    </androidx.appcompat.widget.LinearLayoutCompat>




                    <LinearLayout
                        android:id="@+id/bottombtn"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/margin_half"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/llfavSOngdata"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:background="@drawable/button_signin_transprent"
                            android:layout_marginRight="@dimen/_10ssp"
                            android:layout_marginLeft="@dimen/_34ssp"
                            >

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivFavorite"
                                android:layout_width="24sp"
                                android:layout_height="24sp"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/favorite"
                                android:tint="@color/bluedarkviewq"
                                />
                            <TextView
                                android:id="@+id/bSignIn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_half"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ivFavorite"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/TXT_FAVORITE"
                                android:textAllCaps="false"
                                android:textColor="@color/bluedarkviewq"
                                android:textSize="@dimen/sub_heading" />
                        </RelativeLayout>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bSignIn2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/button_signin"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_marginRight="@dimen/_34ssp"
                            android:layout_marginLeft="@dimen/_10ssp"
                            android:text="Play Songs"
                            android:fontFamily="@font/roboto_regular"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sub_heading" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/above_shadow"
                        ></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40ssp"
                        android:rotation="180"
                        android:background="@drawable/above_shadow"
                        ></View>

                </RelativeLayout>



                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ToolbarTheme2" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorFabText"
            android:layout_above="@+id/llReaction"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/font_awesome_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/headerviewid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Songs"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginTop="@dimen/margin_half"
                    android:layout_marginBottom="@dimen/margin_quarter"
                    ></TextView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_below="@+id/headerviewid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:clipToPadding="false"
                    android:padding="@dimen/item_offset" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headerviewid"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/margin_full"
                    android:layout_margin="@dimen/margin_quarter"
                    android:paddingTop="@dimen/margin_half"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/body_1"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="@dimen/button_height_small"
                    android:layout_height="@dimen/button_height_small"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:progressTint="@color/color_facebook"
                    android:visibility="gone" />

                <include layout="@layout/progress_view" />


            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include layout="@layout/layout_like_favorite_comment" />
</RelativeLayout>
