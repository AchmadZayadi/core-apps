<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:background="@color/white"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_marginTop="9sp"
    android:layout_marginEnd="7sp"
    android:layout_marginLeft="7sp"
    android:layout_marginRight="7sp"
    android:layout_marginStart="7sp"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90sp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lllenar1"
            android:layout_width="match_parent"
            android:layout_height="45sp">
        <TextView
            android:id="@+id/titlest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Software"
            android:textSize="17sp"
            android:padding="10dp"
            android:fontFamily="@font/helvetica_medium"
            android:textColor="@color/black_81"
            ></TextView>

            <ImageView
                android:id="@+id/optionmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icblack_dot"
                android:padding="10dp"
                android:rotation="90"
                android:layout_gravity="center_vertical"
                ></ImageView>
        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_below="@+id/lllenar1"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/black_40"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#FBFBFB"
            android:layout_below="@+id/view1"
            android:layout_height="45sp">

            <RelativeLayout
                android:id="@+id/previewid"
                android:layout_width="0dp"
                android:gravity="center|center_vertical"
                android:layout_weight="1"
                android:layout_height="45sp">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:tint="@color/black_81"
                    android:src="@drawable/ic_views"
                    android:layout_centerVertical="true"
                    app:tint="@color/black_81"
                    tools:ignore="UseAppTint"></ImageView>
                <TextView
                    android:layout_toEndOf="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5sp"
                     android:text="Preview"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/d_din_bold"
                    android:textColor="@color/black_81"
                    android:textSize="18sp"
                    ></TextView>

            </RelativeLayout>
            <View
                android:id="@+id/view2"
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/black_40"
                ></View>

            <RelativeLayout
                android:id="@+id/downloadid"
                android:layout_width="0dp"
                android:gravity="center|center_vertical"
                android:layout_weight="1"
                android:layout_height="45sp">
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:tint="@color/black_81"
                    android:src="@drawable/ic_file_download"
                    android:layout_centerVertical="true"
                    app:tint="@color/black_81"
                    tools:ignore="UseAppTint"></ImageView>
                <TextView
                    android:layout_toEndOf="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5sp"
                    android:text="Download"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/d_din_bold"
                    android:textColor="@color/black_81"
                    android:textSize="18sp"
                    ></TextView>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>