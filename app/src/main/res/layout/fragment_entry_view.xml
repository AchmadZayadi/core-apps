<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:visibility="visible">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            android:theme="@style/ActionBarTheme">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleMarginStart="@dimen/margin_full"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title=" "
                app:titleEnabled="true">

                <RelativeLayout
                    android:id="@+id/rlDetail"
                    style="@style/Main_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="visible"
                    app:layout_collapseMode="none">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCoverPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="180sp"
                        android:scaleType="centerCrop" />

                    <View
                        android:id="@+id/vScrim"
                        android:layout_width="match_parent"
                        android:layout_height="180sp"
                        android:background="@drawable/scrim"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivMediaType"
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="74sp"
                        android:src="@drawable/play"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/pbLoader"
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="74sp"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvType"
                        style="@style/text_style_1"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="100sp"
                        android:background="@drawable/rounded_right_filled_yellow_14"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/margin_quarter"
                        android:paddingEnd="@dimen/margin_full"
                        android:paddingLeft="@dimen/margin_half"
                        android:paddingRight="@dimen/margin_full"
                        android:paddingStart="@dimen/margin_half"
                        android:paddingTop="@dimen/margin_quarter"
                        android:textSize="@dimen/body_1"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCamera"
                        style="@style/ripple_selector"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/margin_quarter"
                        android:layout_marginRight="@dimen/margin_quarter"
                        android:layout_marginTop="150sp"
                        android:background="@drawable/circle_white_background"
                        android:elevation="4dp"
                        android:padding="6dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ses_camera" />


                </RelativeLayout>


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ToolbarTheme" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rlPageInfo"
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivCoverPhoto"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/margin_full"
                    android:paddingLeft="@dimen/margin_full"
                    android:paddingRight="@dimen/margin_full"
                    android:paddingStart="@dimen/margin_full">

                    <View style="@style/divider" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvEntryTitle"
                        style="@style/text_style_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvContestTitle"
                        style="@style/text_style_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvEntryTitle"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_marginTop="@dimen/margin_quarter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/caption" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivUserImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_below="@+id/tvContestTitle"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_marginTop="@dimen/margin_half" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOwnerTitle"
                        style="@style/text_style_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvContestTitle"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_toRightOf="@+id/ivUserImage"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDate"
                        style="@style/text_style_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvOwnerTitle"
                        android:layout_marginTop="@dimen/margin_quarter"
                        android:layout_toRightOf="@+id/ivUserImage"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="@dimen/caption" />

                    <View style="@style/divider" />

                </RelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llTabOptions"
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llAction"
                    android:animateLayoutChanges="true"
                    android:padding="@dimen/margin_half" />

                <include
                    layout="@layout/progress_view"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rlChartMain"
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_half"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGraphTitle"
                        style="@style/text_style_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:layout_marginLeft="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_half"
                        android:layout_marginStart="@dimen/margin_full"
                        android:layout_marginTop="@dimen/margin_half"
                        android:layout_toLeftOf="@+id/llSpinner"
                        android:layout_toStartOf="@+id/llSpinner"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="@dimen/body_1"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/margin_half"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_marginTop="@dimen/margin_half"
                        android:background="@drawable/rounded_holo_border_grey_light"
                        android:padding="@dimen/margin_quarter">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="100dp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_below="@id/v1"
                         android:animateLayoutChanges="true">-->


                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lcChart"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_below="@id/llSpinner"
                        android:layout_marginLeft="@dimen/margin_full"
                        android:layout_marginStart="@dimen/margin_full" />

                    <!--  </RelativeLayout>-->


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llChartLegend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lcChart"
                        android:layout_marginBottom="@dimen/margin_half"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:animateLayoutChanges="true"
                        android:gravity="center">

                        <View
                            android:id="@+id/v1"
                            android:layout_width="@dimen/height_chart_legend"
                            android:layout_height="@dimen/height_chart_legend"
                            android:layout_marginLeft="@dimen/margin_half"
                            android:layout_marginStart="@dimen/margin_half"
                            android:background="@color/chart_vote" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv1"
                            style="@style/text_style_1"
                            android:layout_width="wrap_content"
                            android:padding="@dimen/margin_quarter"
                            android:text="@string/_VOTES"
                            android:textSize="@dimen/caption_mini" />

                        <View
                            android:id="@+id/v2"
                            android:layout_width="@dimen/height_chart_legend"
                            android:layout_height="@dimen/height_chart_legend"
                            android:layout_marginLeft="@dimen/margin_half"
                            android:layout_marginStart="@dimen/margin_half"
                            android:background="@color/chart_like" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv2"
                            style="@style/text_style_1"
                            android:layout_width="wrap_content"
                            android:padding="@dimen/margin_quarter"
                            android:text="@string/_LIKES"
                            android:textSize="@dimen/caption_mini" />

                        <View
                            android:id="@+id/v3"
                            android:layout_width="@dimen/height_chart_legend"
                            android:layout_height="@dimen/height_chart_legend"
                            android:layout_marginLeft="@dimen/margin_half"
                            android:layout_marginStart="@dimen/margin_half"
                            android:background="@color/chart_comment" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv3"
                            style="@style/text_style_1"
                            android:layout_width="wrap_content"
                            android:padding="@dimen/margin_quarter"
                            android:text="@string/TXT_COMMENTS"
                            android:textSize="@dimen/caption_mini" />

                        <View
                            android:id="@+id/v4"
                            android:layout_width="@dimen/height_chart_legend"
                            android:layout_height="@dimen/height_chart_legend"
                            android:layout_marginLeft="@dimen/margin_half"
                            android:layout_marginStart="@dimen/margin_half"
                            android:background="@color/chart_favourite" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv4"
                            style="@style/text_style_1"
                            android:layout_width="wrap_content"
                            android:padding="@dimen/margin_quarter"
                            android:text="@string/_FAVORITES"
                            android:textSize="@dimen/caption_mini" />

                        <View
                            android:id="@+id/v5"
                            android:layout_width="@dimen/height_chart_legend"
                            android:layout_height="@dimen/height_chart_legend"
                            android:layout_marginLeft="@dimen/margin_half"
                            android:layout_marginStart="@dimen/margin_half"
                            android:background="@color/chart_view" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv5"
                            style="@style/text_style_1"
                            android:layout_width="wrap_content"
                            android:layout_marginEnd="@dimen/margin_half"
                            android:layout_marginRight="@dimen/margin_half"
                            android:padding="@dimen/margin_quarter"
                            android:text="@string/_VIEWS"
                            android:textSize="@dimen/caption_mini" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </RelativeLayout>


                <!--about section starts-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llAbout"
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llTabOptions"
                    android:layout_marginTop="@dimen/margin_half"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_half"
                    android:visibility="gone">

                    <View style="@style/divider" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_style_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_half"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginLeft="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_marginStart="@dimen/margin_full"
                        android:layout_marginTop="@dimen/margin_half"
                        android:text="@string/about"
                        android:textStyle="bold" />


                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--about section ends-->

                <!--Detail section starts-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llDetail"
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llTabOptions"
                    android:layout_marginTop="@dimen/margin_half"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_half"
                    android:visibility="gone">

                    <View style="@style/divider" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/text_style_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_half"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginLeft="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_marginStart="@dimen/margin_full"
                        android:layout_marginTop="@dimen/margin_half"
                        android:text="@string/details"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDetail"
                        style="@style/text_style_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_half"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginLeft="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_marginStart="@dimen/margin_full"
                        android:layout_marginTop="6dp"
                        android:text="@string/details"
                        android:textSize="@dimen/body_1" />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--Detail section ends-->


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/contest_vote"
            android:tint="@color/white"
            android:visibility="gone"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|end" />


        <!--  </android.support.v4.widget.NestedScrollView>-->
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>