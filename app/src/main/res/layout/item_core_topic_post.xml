<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain2"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_offset"
    android:layout_weight="1"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/cvMain"
        style="@style/Forground_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_quarter"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:foregroundGravity="center_horizontal"
                tools:src="@drawable/dummy_profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_toEndOf="@+id/ivImage"
                android:layout_toRightOf="@+id/ivImage"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llmiddle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_quarter"
                        android:layout_toStartOf="@+id/mcvPost"
                        android:layout_toLeftOf="@+id/mcvPost"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_half">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvOwnerTitle"
                                style="@style/text_style_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_half"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="@dimen/sub_heading"
                                android:textStyle="bold"
                                tools:text="Test Topic" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvModerator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tvOwnerTitle"
                                android:background="@color/colorPrimary"
                                android:paddingLeft="@dimen/margin_half"
                                android:paddingRight="@dimen/margin_half"
                                android:textColor="@color/white"
                                android:textSize="@dimen/caption_large"
                                android:textStyle="bold"
                                android:visibility="gone"
                                tools:text="Moderator"
                                tools:visibility="visible" />

                            <TextView
                                android:id="@+id/tvCreatedOn"
                                style="@style/text_style_stats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/margin_full"
                                android:text="April 19, 2019"
                                android:textSize="@dimen/caption"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/tvUserPosts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvOwnerTitle"
                                android:layout_margin="2dp"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:text="2 posts" />
                        </RelativeLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <WebView
            android:id="@+id/tvBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_full"
            android:layout_marginTop="@dimen/margin_quarter"
            android:layout_marginRight="@dimen/margin_full"
            android:layout_marginBottom="@dimen/margin_quarter"
            android:text="With the help of this Plugin, you can allow your users to create as many listings as they want in the different categories created by the site admin from the Admin Panel of this Plugin." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_full"
            android:layout_marginBottom="@dimen/margin_half">

            <LinearLayout
                android:id="@+id/llQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/format_bar_button_quote_disabled"
                    app:tint="@color/text_color_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=" Quote "
                    android:textSize="16dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivPostOption"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/margin_quarter"
                android:src="@drawable/vertical_dots"
                app:tint="@color/text_color_2" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>