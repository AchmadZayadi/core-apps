<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false"
                android:theme="@style/ToolbarTheme">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="false"
                    app:contentScrim="@color/colorPrimary"
                    app:expandedTitleMarginStart="@dimen/margin_full"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:title=" "
                    app:titleEnabled="true">

                    <RelativeLayout
                        android:id="@+id/rlDetail"
                        style="@style/Background_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        app:layout_collapseMode="none"
                        tools:visibility="visible">

                        <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                            android:id="@+id/rvPhotos"
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:msrv_gravity="center"
                            app:msrv_snap_count="1"
                            tools:listitem="@layout/item_image_200" />

                        <com.rd.PageIndicatorView
                            android:id="@+id/pageIndicatorView"
                            style="@style/page_indicator"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="138sp"
                            app:piv_animationType="thinWorm"
                            app:piv_dynamicCount="true"
                            app:piv_interactiveAnimation="true"
                            app:piv_padding="2dp"
                            app:piv_radius="4dp"
                            app:piv_selectedColor="@color/colorPrimary"
                            app:piv_unselectedColor="@color/dividerColor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivCamera"
                            style="@style/ripple_selector"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="134sp"
                            android:layout_marginEnd="@dimen/margin_quarter"
                            android:layout_marginRight="@dimen/margin_quarter"
                            android:background="@drawable/circle_white_background"
                            android:elevation="4dp"
                            android:padding="6dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ses_camera"
                            tools:visibility="visible" />

                        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                            android:id="@+id/cvInfo"
                            style="@style/Card_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginLeft="16sp"
                            android:layout_marginTop="158sp"
                            android:layout_marginEnd="16sp"
                            android:layout_marginRight="16sp"
                            android:layout_marginBottom="@dimen/margin_half"
                            app:cardCornerRadius="@dimen/margin_quarter"
                            app:cardElevation="@dimen/margin_quarter">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llTextBottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_medium"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvTitle"
                                    style="@style/text_style_1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    tools:text="Upload Videos and get a chance in Movies" />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/llArtist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_quarter">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/ivOwner"
                                        style="@style/text_style_2"
                                        android:layout_width="wrap_content"
                                        android:textSize="@dimen/caption"
                                        tools:text="5" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvOwnerName"
                                        style="@style/text_style_2"
                                        android:layout_marginStart="@dimen/margin_quarter"
                                        android:layout_marginLeft="@dimen/margin_quarter"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textSize="@dimen/caption"
                                        tools:text="by Angelina" />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/llCategory"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_quarter">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/ivCategory"
                                        style="@style/text_style_2"
                                        android:layout_width="wrap_content"
                                        android:textSize="@dimen/caption"
                                        tools:text="5" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvCategoryName"
                                        style="@style/text_style_2"
                                        android:layout_marginStart="@dimen/margin_quarter"
                                        android:layout_marginLeft="@dimen/margin_quarter"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textSize="@dimen/caption"
                                        tools:text="Film,Theater &amp; Video" />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvStats"
                                        style="@style/text_style_stats"
                                        android:layout_marginTop="@dimen/margin_quarter"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textSize="@dimen/caption"
                                        tools:text="5C 7H 6G" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvStatus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginStart="@dimen/margin_half"
                                        android:layout_marginLeft="@dimen/margin_half"
                                        android:layout_marginTop="@dimen/margin_quarter"
                                        android:ellipsize="end"
                                        android:fontFamily="@string/medium_bold"
                                        android:maxLines="1"
                                        android:textStyle="bold"
                                        tools:text="21 Days left" />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <ProgressBar
                                    android:id="@+id/sbProgress"
                                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="@dimen/margin_quarter"
                                    android:layout_marginBottom="@dimen/margin_quarter"
                                    android:max="100"
                                    android:progress="38"
                                    android:progressDrawable="@drawable/seekbar_crowd" />

                                <com.sesolutions.utils.FlowLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_quarter"
                                        android:background="@drawable/curved_grey_border_holo"
                                        android:padding="4sp">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin_quarter"
                                            android:layout_marginLeft="@dimen/margin_quarter"
                                            android:layout_marginEnd="@dimen/margin_quarter"
                                            android:layout_marginRight="@dimen/margin_quarter"
                                            android:text="@string/raised"
                                            android:textColor="@color/text_color_1"
                                            android:textSize="@dimen/caption" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvRaised"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin_quarter"
                                            android:layout_marginLeft="@dimen/margin_quarter"
                                            android:layout_marginEnd="@dimen/margin_quarter"
                                            android:layout_marginRight="@dimen/margin_quarter"
                                            android:textColor="@color/text_color_2"
                                            android:textSize="@dimen/caption"
                                            tools:text="$560067" />

                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/margin_half"
                                        android:layout_marginLeft="@dimen/margin_half"
                                        android:layout_marginTop="@dimen/margin_quarter"
                                        android:layout_marginEnd="@dimen/margin_half"
                                        android:layout_marginRight="@dimen/margin_half"
                                        android:background="@drawable/curved_grey_border_holo"
                                        android:padding="4sp">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin_quarter"
                                            android:layout_marginLeft="@dimen/margin_quarter"
                                            android:layout_marginEnd="@dimen/margin_quarter"
                                            android:layout_marginRight="@dimen/margin_quarter"
                                            android:text="@string/donor"
                                            android:textColor="@color/text_color_1"
                                            android:textSize="@dimen/caption" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvDonor"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin_quarter"
                                            android:layout_marginLeft="@dimen/margin_quarter"
                                            android:layout_marginEnd="@dimen/margin_quarter"
                                            android:layout_marginRight="@dimen/margin_quarter"
                                            android:textColor="@color/text_color_2"
                                            android:textSize="@dimen/caption"
                                            tools:text="60" />

                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_quarter"
                                        android:background="@drawable/curved_grey_border_holo"
                                        android:padding="4sp">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin_quarter"
                                            android:layout_marginLeft="@dimen/margin_quarter"
                                            android:layout_marginEnd="@dimen/margin_quarter"
                                            android:layout_marginRight="@dimen/margin_quarter"
                                            android:text="@string/goal"
                                            android:textColor="@color/text_color_1"
                                            android:textSize="@dimen/caption" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvGoal"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin_quarter"
                                            android:layout_marginLeft="@dimen/margin_quarter"
                                            android:layout_marginEnd="@dimen/margin_quarter"
                                            android:layout_marginRight="@dimen/margin_quarter"
                                            android:textColor="@color/text_color_2"
                                            android:textSize="@dimen/caption"
                                            tools:text="$6098989" />

                                    </androidx.appcompat.widget.LinearLayoutCompat>


                                </com.sesolutions.utils.FlowLayout>


                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/llTabOptions"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_quarter"
                                    android:animateLayoutChanges="true"
                                    android:padding="@dimen/margin_half">

                                    <include layout="@layout/layout_text_image_vertical" />

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <androidx.appcompat.widget.AppCompatRatingBar
                                            android:id="@+id/rb"
                                            style="@style/ReviewRatingBar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/margin_quarter"
                                            android:isIndicator="false"
                                            android:numStars="5"
                                            android:stepSize="0"
                                            tools:rating="3.5" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvRatingCount"
                                            style="@style/text_style_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="@dimen/margin_half"
                                            android:textSize="@dimen/body_1"
                                            tools:text="4 Ratings" />
                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/llDonate"
                                        style="@style/ripple_selector"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:paddingStart="@dimen/margin_quarter"
                                        android:paddingLeft="@dimen/margin_quarter"
                                        android:paddingEnd="@dimen/margin_quarter"
                                        android:paddingRight="@dimen/margin_quarter">

                                        <com.sesolutions.animate.bang.SmallBangView
                                            android:id="@+id/vBangDonate"
                                            android:layout_width="32dp"
                                            android:layout_height="32dp">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                style="@style/image_tint_primary"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:layout_gravity="center"
                                                android:tint="@color/text_color_1"
                                                app:srcCompat="@drawable/ses_donate" />
                                        </com.sesolutions.animate.bang.SmallBangView>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvDonate"
                                            style="@style/text_style_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/margin_quarter"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:textSize="@dimen/body_1"
                                            tools:text="Donate" />

                                    </LinearLayout>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


                    </RelativeLayout>


                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/ToolbarTheme" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    style="@style/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    app:tabGravity="fill"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabTextAppearance="@style/myTabTextStyle"
                    app:tabTextColor="@color/text_color_1" />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <!--  </android.support.v4.widget.NestedScrollView>-->
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>
