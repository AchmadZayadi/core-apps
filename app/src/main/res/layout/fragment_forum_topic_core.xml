<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Background_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppThemeMatrial">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            android:tag="@string/tag_toolbar"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/ToolbarTheme">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    style="@style/button_image_toolbar"
                    app:srcCompat="@drawable/arrow_left" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    style="@style/text_style_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="84dp"
                    android:layout_marginLeft="84dp"
                    android:layout_toStartOf="@+id/llOption"
                    android:layout_toLeftOf="@+id/llOption"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title"
                    tools:text="Too much very long title, see it fits well now don't worry" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivOption"
                    style="@style/button_image_toolbar"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:srcCompat="@drawable/vertical_dots" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcvPostReply"
                        style="@style/Card_style"
                        android:theme="@style/AppThemeMatrial"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginTop="@dimen/margin_half"
                        app:cardCornerRadius="4sp"
                        app:cardElevation="0dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_holo_border_primary">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="@dimen/height_search_drawer"
                                android:layout_gravity="center_vertical"
                                android:padding="10dp"
                                android:visibility="visible"
                                app:srcCompat="@drawable/reply"
                                />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPostReply"
                                style="@style/text_style_1"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginEnd="@dimen/margin_half"
                                android:layout_marginRight="@dimen/margin_half"
                                android:layout_toEndOf="@+id/ivSubscribe"
                                android:layout_toRightOf="@+id/ivSubscribe"
                                android:gravity="center_vertical"
                                android:text="Post Reply"
                                android:textColor="@color/colorFormMasterHeaderText"
                                android:textSize="@dimen/elementTextTitleSize" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcvClose"
                        android:theme="@style/AppThemeMatrial"
                        style="@style/Card_style"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginRight="@dimen/margin_half"
                        android:visibility="gone"
                        android:layout_below="@+id/mcvPostReply"
                        app:cardElevation="4dp"
                        app:strokeColor="@color/text_color_2"
                        app:strokeWidth="0.5dp"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_half"
                                app:srcCompat="@drawable/ic_lock_black_24dp"
                                app:tint="@color/red" />

                            <TextView
                                style="@style/text_style_stats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="This topic has been closed." />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvSubscribe"
                        style="@style/Card_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/margin_half"
                        android:visibility="gone"
                        app:cardCornerRadius="4sp"
                        app:cardElevation="0dp"
                        tools:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/rlCreate"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_search_drawer"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/rounded_holo_border_primary"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivSubscribe"
                                android:layout_width="36dp"
                                android:layout_height="@dimen/height_search_drawer"
                                android:layout_gravity="center_vertical"
                                android:padding="10dp"
                                android:visibility="visible"
                                app:srcCompat="@drawable/subcribe" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvSubscribe"
                                style="@style/text_style_1"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginEnd="@dimen/margin_half"
                                android:layout_marginRight="@dimen/margin_half"
                                android:layout_toEndOf="@+id/ivSubscribe"
                                android:layout_toRightOf="@+id/ivSubscribe"
                                android:gravity="center_vertical"
                                android:text="Subscribe"
                                android:textColor="@color/colorFormMasterHeaderText"
                                android:textSize="@dimen/elementTextTitleSize"
                                android:visibility="visible" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:layout_marginTop="4dp"
                    android:descendantFocusability="beforeDescendants"
                    android:divider="#b5b5b5"
                    android:layoutAnimation="@anim/anim_fall_down"
                    android:orientation="vertical" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcvReply"
                    android:theme="@style/AppThemeMatrial"
                    style="@style/Card_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_half"
                    android:visibility="gone"
                    app:cardCornerRadius="4sp"
                    app:cardElevation="0dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_holo_border_primary">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="@dimen/height_search_drawer"
                            android:layout_gravity="center_vertical"
                            android:padding="10dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/reply" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReply"
                            style="@style/text_style_1"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="@dimen/margin_half"
                            android:layout_marginRight="@dimen/margin_half"
                            android:layout_toEndOf="@+id/ivSubscribe"
                            android:layout_toRightOf="@+id/ivSubscribe"
                            android:gravity="center_vertical"
                            android:text="Post Reply"
                            android:textColor="@color/colorFormMasterHeaderText"
                            android:textSize="@dimen/elementTextTitleSize" />
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/layout_no_data" />

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="@dimen/button_height_small"
        android:layout_height="@dimen/button_height_small"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />


</RelativeLayout>
