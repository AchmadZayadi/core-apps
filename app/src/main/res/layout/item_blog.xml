<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_quarter"
    android:layout_marginTop="@dimen/margin_quarter">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSongImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_video"
            android:scaleType="centerCrop" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llReactionOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_half">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLike"
                android:layout_width="@dimen/size_like_image_top_item_music"
                android:layout_height="@dimen/size_like_image_top_item_music"
                android:layout_marginRight="@dimen/margin_half"
                app:srcCompat="@drawable/like" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFavorite"
                android:layout_width="@dimen/size_like_image_top_item_music"
                android:layout_height="@dimen/size_like_image_top_item_music"
                android:visibility="gone"
                android:layout_marginRight="@dimen/margin_half"
                app:srcCompat="@drawable/music_favourite" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAdd"
                android:layout_width="@dimen/size_like_image_top_item_music"
                android:layout_height="@dimen/size_like_image_top_item_music"
                android:layout_marginRight="@dimen/margin_half"
                app:srcCompat="@drawable/vertical_dots" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llTextBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSongImage"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="@dimen/margin_half"
            android:paddingLeft="@dimen/margin_half"
            android:paddingRight="@dimen/margin_half"
            android:paddingStart="@dimen/margin_half">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSongTitle"
                style="@style/text_style_1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/margin_half" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llAlbumDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_quarter">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ivDate"
                    style="@style/text_style_2"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/caption" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDate"
                    style="@style/text_style_2"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/caption" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <RelativeLayout
                android:id="@+id/rlArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_quarter">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ivArtist"
                        style="@style/text_style_2"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/caption" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvArtist"
                        style="@style/text_style_2"
                        android:layout_marginLeft="@dimen/margin_quarter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/caption" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivStar1"
                        style="@style/image_star"
                        android:layout_width="@dimen/size_star_video"
                        android:layout_height="@dimen/size_star_video"
                        android:layout_marginLeft="@dimen/margin_star"
                        android:layout_marginRight="@dimen/margin_star"
                        app:srcCompat="@drawable/star_unfilled"
                        app:tint="@color/colorPrimary" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivStar2"
                        style="@style/image_star"
                        android:layout_width="@dimen/size_star_video"
                        android:layout_height="@dimen/size_star_video"
                        android:layout_marginLeft="@dimen/margin_star"
                        android:layout_marginRight="@dimen/margin_star"

                        app:srcCompat="@drawable/star_unfilled"
                        app:tint="@color/colorPrimary" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivStar3"
                        style="@style/image_star"
                        android:layout_width="@dimen/size_star_video"
                        android:layout_height="@dimen/size_star_video"
                        android:layout_marginLeft="@dimen/margin_star"
                        android:layout_marginRight="@dimen/margin_star"

                        app:srcCompat="@drawable/star_unfilled"
                        app:tint="@color/colorPrimary" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivStar4"
                        style="@style/image_star"
                        android:layout_width="@dimen/size_star_video"
                        android:layout_height="@dimen/size_star_video"
                        android:layout_marginLeft="@dimen/margin_star"
                        android:layout_marginRight="@dimen/margin_star"

                        app:srcCompat="@drawable/star_unfilled"
                        app:tint="@color/colorPrimary" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivStar5"
                        style="@style/image_star"
                        android:layout_width="@dimen/size_star_video"
                        android:layout_height="@dimen/size_star_video"
                        android:layout_marginLeft="@dimen/margin_star"
                        android:layout_marginRight="@dimen/margin_star"

                        app:srcCompat="@drawable/star_unfilled"
                        app:tint="@color/colorPrimary" />


                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBody"
                style="@style/text_style_1"
                android:layout_marginTop="@dimen/margin_quarter"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="@dimen/margin_half"
                android:textSize="@dimen/caption" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</androidx.cardview.widget.CardView>