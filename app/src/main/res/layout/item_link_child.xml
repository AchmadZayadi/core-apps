<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_quarter"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.sesolutions.ui.customviews.SquareImageView
            android:id="@+id/ivVideoImage"
            style="@style/ripple_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvImageTitle"
            style="@style/text_style_1"
            android:layout_marginStart="@dimen/margin_quarter"
            android:layout_marginLeft="@dimen/margin_quarter"
            android:layout_marginBottom="@dimen/margin_quarter"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/margin_quarter" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvImageDescription"
            style="@style/text_style_1"
            android:visibility="gone" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>