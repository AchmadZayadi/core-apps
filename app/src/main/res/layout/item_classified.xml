<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSongImage"
                android:layout_width="110sp"
                android:layout_height="75sp"
                android:layout_marginBottom="@dimen/margin_full"
                android:layout_marginLeft="@dimen/margin_full"
                android:layout_marginStart="@dimen/margin_full"
                android:layout_marginTop="@dimen/margin_full"
                android:scaleType="centerCrop" />


            <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llTextBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_full"
                android:layout_marginEnd="@dimen/margin_full"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_full"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_full"
                android:layout_toRightOf="@+id/ivSongImage"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSongTitle"
                    style="@style/text_style_1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingTop="2dp"
                    android:textSize="@dimen/sub_heading" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ivArtist"
                        style="@style/text_style_2"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/caption" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvArtist"
                        style="@style/text_style_2"
                        android:layout_marginLeft="@dimen/margin_quarter"
                        android:layout_marginStart="@dimen/margin_quarter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/caption" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llAlbumDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_quarter">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ivDate"
                        style="@style/text_style_2"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/caption" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDate"
                        style="@style/text_style_2"
                        android:layout_marginLeft="@dimen/margin_quarter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/caption" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>

        <View style="@style/divider" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>