<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llReaction">

        <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llReaction"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="220sp"
                android:fitsSystemWindows="true"
                android:stateListAnimator="@null"
                android:theme="@style/ActionBarTheme">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:expandedTitleMarginStart="@dimen/margin_full"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:title=" ">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llCoverPhoto"
                        style="@style/Main_style"
                        android:layout_width="match_parent"
                        android:layout_height="220sp"
                        app:layout_collapseMode="parallax">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivCoverPhoto1"
                            android:layout_width="match_parent"
                            android:layout_height="220sp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llCoverPhoto2"
                            android:layout_width="match_parent"
                            android:layout_height="220sp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivCoverPhoto2"
                                android:layout_width="match_parent"
                                android:layout_height="200sp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivCoverPhoto3"
                                android:layout_width="match_parent"
                                android:layout_height="200sp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="220sp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/scrim" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCamera"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:layout_gravity="end"
                        android:layout_marginTop="164sp"
                        android:padding="10sp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ses_camera" />

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/ToolbarTheme" />
                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/llReaction"
                android:layout_below="@+id/appBar"
                android:visibility="invisible"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:id="@+id/font_awesome_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvDetail"
                        style="@style/Card_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_half"
                            android:paddingBottom="@dimen/margin_quarter">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivUserImage"
                                android:layout_width="56sp"
                                android:layout_height="56sp"

                                android:paddingBottom="@dimen/margin_half"
                                android:paddingLeft="@dimen/margin_half"
                                android:paddingStart="@dimen/margin_half" />


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llAlbumDetail"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/ivUserImage"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/margin_full">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvAlbumTitle"
                                    style="@style/text_style_1"
                                    android:layout_width="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="@dimen/sub_title"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvUserTitle"
                                    style="@style/text_style_2"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="@dimen/sub_heading" />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/ivAlbumDate"
                                        style="@style/text_style_2"
                                        android:layout_width="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textSize="@dimen/body_1" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvAlbumDate"
                                        style="@style/text_style_2"
                                        android:layout_marginLeft="@dimen/margin_quarter"
                                        android:layout_marginTop="2dp"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textSize="@dimen/body_1" />
                                </androidx.appcompat.widget.LinearLayoutCompat>


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvAlbumDetail"
                                    style="@style/text_style_stats"
                                    android:layout_marginTop="4dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="@dimen/caption" />


                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <include
                        layout="@layout/fragment_list_common_offset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cvDetail" />

                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/layout_like_favorite_comment" />


</RelativeLayout>