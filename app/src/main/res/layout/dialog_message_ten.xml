<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlDialogMain"
    style="@style/dialog_style"
    android:layout_width="300dp"
    app:cardCornerRadius="@dimen/_10ssp"

    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="30sp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDialogText"
            style="@style/text_style_1"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/MSG_CHOOSE_SOURCE"
            android:textColor="@color/black"
            android:padding="@dimen/margin_full"
            android:textSize="20sp" />


        <RelativeLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center_horizontal"
            >

            <RelativeLayout
                android:id="@+id/bCamera"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/youtubeic"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/youtube_dialog"
                    ></ImageView>

                <TextView
                    android:id="@+id/yic"
                    android:layout_toRightOf="@+id/youtubeic"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="You Tube"
                    android:textColor="@color/black"></TextView>

            </RelativeLayout>

            <View
                android:id="@+id/view11"
                android:layout_toRightOf="@+id/bCamera"
                android:layout_width="1dp"
                android:layout_height="10sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/grey"
                ></View>

            <RelativeLayout
                android:id="@+id/bGallary"
                android:layout_toRightOf="@+id/view11"

                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/vimeoic"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vimeo_dialog"
                    ></ImageView>

                <TextView
                    android:id="@+id/vimeotext"
                    android:layout_toRightOf="@+id/vimeoic"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="You Tube"
                    android:textColor="@color/black"></TextView>

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <View
                android:id="@+id/view12"
                android:layout_width="80dp"
                android:layout_height="1sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/grey"
                ></View>

            <TextView
                android:id="@+id/tvor"
                android:layout_toRightOf="@+id/view12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textColor="@color/black"
                ></TextView>


            <View
                android:layout_toRightOf="@+id/tvor"
                android:id="@+id/view13"
                android:layout_width="80dp"
                android:layout_height="1sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/grey"
                ></View>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center_horizontal"
            >

            <RelativeLayout
                android:id="@+id/bLink"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/mydeviceic"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_device_dialog"
                    ></ImageView>

                <TextView
                    android:id="@+id/mydevicetext"
                    android:layout_toRightOf="@+id/mydeviceic"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="My Device"
                    android:textColor="@color/black"></TextView>

            </RelativeLayout>



        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
