<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRequestTitle"
        style="@style/text_style_1"
        android:layout_width="wrap_content"
        android:padding="@dimen/margin_full"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRequestDesc"
        style="@style/text_style_1"
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/margin_full"
        android:paddingLeft="@dimen/margin_full"
        android:paddingRight="@dimen/margin_full" />
