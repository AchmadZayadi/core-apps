<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <include layout="@layout/layout_toolbar_customize"></include>

            <TextView
                android:id="@+id/titleheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required Skills:"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_half"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                ></TextView>

            <TextView
                android:id="@+id/titledesc"
                android:layout_width="match_parent"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_margin="@dimen/margin_half" />


            <LinearLayout
                android:id="@+id/linerid1"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Website :"
                    android:gravity="left"
                    android:paddingLeft="@dimen/margin_half"
                    android:layout_marginRight="@dimen/margin_half"
                    ></TextView>
                <TextView
                    android:id="@+id/txt1_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="htpps://google.com"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerid2"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Website :"
                    android:gravity="left"
                    android:paddingLeft="@dimen/margin_half"
                    android:layout_marginRight="@dimen/margin_half"
                    ></TextView>
                <TextView
                    android:id="@+id/txt2_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="htpps://google.com"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerid3"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Website :"
                    android:gravity="left"
                    android:paddingLeft="@dimen/margin_half"
                    android:layout_marginRight="@dimen/margin_half"
                    ></TextView>
                <TextView
                    android:id="@+id/txt3_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="htpps://google.com"
                    ></TextView>
            </LinearLayout>

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="@dimen/button_height_small"
        android:layout_height="@dimen/button_height_small"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <include layout="@layout/layout_no_data" />

    <include layout="@layout/layout_hidden_feed_option" />

</RelativeLayout>