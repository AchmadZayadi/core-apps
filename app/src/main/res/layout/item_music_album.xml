<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_quarter"
    android:layout_marginBottom="@dimen/margin_quarter"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/ivCardId"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_8ssp"
            android:layout_marginRight="@dimen/_8ssp"
            android:layout_height="@dimen/height_image_music_album_new"
            app:cardCornerRadius="7dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSongImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color"
                ></View>

            <ImageView
                android:id="@+id/playmuisc"
                android:layout_width="@dimen/_32ssp"
                android:layout_height="@dimen/_32ssp"
                android:src="@drawable/ic_baseline_play_circle_24"
                android:layout_gravity="center_vertical|center_horizontal"
                ></ImageView>

            <LinearLayout
                android:id="@+id/llvideocount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end|bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_above="@+id/llTextBottom"
                android:background="@drawable/bg_border_curve_black"
                android:layout_margin="@dimen/margin_half"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/music"
                    app:tint="@color/white"></ImageView>

                <TextView
                    android:id="@+id/videocountid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="4dp"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    ></TextView>

            </LinearLayout>


        </androidx.cardview.widget.CardView>





        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fabPlay"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half"
            android:layout_marginTop="@dimen/fab_margin_top_item_music"
            android:src="@drawable/play_rounded_blue"
            android:visibility="invisible" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llReactionOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_half">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLike"
                android:layout_width="@dimen/size_like_image_top_item_music"
                android:layout_height="@dimen/size_like_image_top_item_music"
                android:layout_marginRight="@dimen/margin_half"
                app:srcCompat="@drawable/like" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFavorite"
                android:layout_width="@dimen/size_like_image_top_item_music"
                android:layout_height="@dimen/size_like_image_top_item_music"
                android:layout_marginRight="@dimen/margin_half"
                app:srcCompat="@drawable/music_favourite" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAdd"
                android:layout_width="@dimen/size_like_image_top_item_music"
                android:layout_height="@dimen/size_like_image_top_item_music"
                android:layout_marginRight="@dimen/margin_half"
                app:srcCompat="@drawable/music_add" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llTextBottom"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_8ssp"
            android:layout_marginRight="@dimen/_8ssp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivCardId"
            android:layout_marginBottom="@dimen/margin_half"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_quarter"
            android:paddingRight="@dimen/margin_quarter">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSongTitle"
                style="@style/text_style_1"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="0dp"
                android:text=""
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/sub_heading" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSaveFeed"
                    android:layout_width="@dimen/height_icon_feed_option_menu"
                    android:layout_height="@dimen/height_icon_feed_option_menu"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:layout_marginEnd="@dimen/margin_half"
                    android:layout_marginRight="@dimen/margin_half"
                    android:paddingTop="2dp"
                    app:srcCompat="@drawable/ic_save"
                    />
            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_behalf">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ivArtist"
                    style="@style/text_style_2"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sub_heading_normal" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvArtist"
                    style="@style/text_style_2"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:layout_marginRight="@dimen/_5ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/body_3" />

                <LinearLayout
                    android:layout_below="@+id/leanerid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivFbShare"
                        android:layout_width="@dimen/height_icon_feed_option_menu"
                        android:layout_height="@dimen/height_icon_feed_option_menu"
                        android:layout_marginEnd="@dimen/margin_quarter"
                        android:layout_marginRight="@dimen/margin_quarter"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/ic_facebook" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivWhatsAppShare"
                        android:layout_width="@dimen/height_icon_feed_option_menu"
                        android:layout_height="@dimen/height_icon_feed_option_menu"
                        android:layout_marginEnd="@dimen/margin_quarter"
                        android:layout_marginRight="@dimen/margin_quarter"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/whatsapp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivImageShare"
                        android:layout_width="@dimen/height_icon_feed_option_menu"
                        android:layout_height="@dimen/height_icon_feed_option_menu"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/ic_share" />


                </LinearLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSongDetail"
                style="@style/text_style_stats"
                android:layout_marginTop="@dimen/margin_quarter"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/caption_mini" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</RelativeLayout>