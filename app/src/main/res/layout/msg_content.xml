<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserImage"
        android:layout_width="@dimen/height_small"
        android:layout_height="@dimen/height_small"
        android:layout_marginStart="@dimen/margin_full"
        android:layout_marginLeft="@dimen/margin_full"
        android:layout_marginTop="@dimen/margin_half"
        android:layout_marginEnd="@dimen/margin_full"
        android:layout_marginRight="@dimen/margin_full"
        android:layout_marginBottom="@dimen/margin_half"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_profile"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent_black_light"
        app:cardCornerRadius="@dimen/radius_comment"
        app:cardElevation="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_half"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUserName"
                style="@style/text_style_1"
                android:textSize="@dimen/body_1"
                android:textStyle="bold"
                app:fontFamily="sans-serif-medium"
                android:text="@string/voted_user"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBodyComment"
                style="@style/text_style_1"
                android:layout_marginTop="@dimen/margin_quarter"
                android:linksClickable="true"
                android:textColorLink="@color/colorPrimary"
                android:textColor="@color/white"
                android:textSize="@dimen/body_1"
                tools:text="this is body" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvJoined"
        style="@style/text_style_1"
        android:textSize="@dimen/body_1"
        tools:text="User joined"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_half"
        android:layout_marginStart="@dimen/margin_half"
        tools:background="@color/black"
        android:textColor="@color/white"
        android:maxLines="1"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>
