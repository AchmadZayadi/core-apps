<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="154dp"
    android:background="#ffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_half"
        android:background="#ebebeb" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_half"
        android:paddingEnd="@dimen/margin_full"
        android:paddingLeft="@dimen/margin_full"
        android:paddingRight="@dimen/margin_full"
        android:paddingStart="16dp"
        android:paddingTop="@dimen/margin_full">

        <View
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:layout_marginRight="@dimen/margin_full"
            android:background="@color/placeholder_bg" />

        <View
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="100dp"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/placeholder_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail"
            android:layout_marginTop="@dimen/margin_full"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/placeholder_text_height"
                android:layout_marginRight="100dp"
                android:background="@color/placeholder_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/placeholder_text_height"
                android:layout_marginRight="50dp"
                android:layout_marginTop="@dimen/margin_half"
                android:background="@color/placeholder_bg" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llLike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/paddinReaction"
                    android:paddingTop="@dimen/paddinReaction">

                    <View
                        android:layout_width="@dimen/height_icon_feed_option_home"
                        android:layout_height="@dimen/height_icon_feed_option_home"
                        android:layout_marginEnd="@dimen/margin_quarter"
                        android:layout_marginRight="@dimen/margin_quarter"
                        android:background="@color/placeholder_bg" />


                    <View
                        android:layout_width="30dp"
                        android:layout_height="8dp"
                        android:background="@color/placeholder_bg" />


                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/paddinReaction"
                    android:paddingTop="@dimen/paddinReaction">

                    <View
                        android:layout_width="@dimen/height_icon_feed_option_home"
                        android:layout_height="@dimen/height_icon_feed_option_home"
                        android:layout_marginEnd="@dimen/margin_quarter"
                        android:layout_marginRight="@dimen/margin_quarter"
                        android:background="@color/placeholder_bg" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="8dp"
                        android:background="@color/placeholder_bg" />


                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llShare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/paddinReaction"
                    android:paddingTop="@dimen/paddinReaction">

                    <View
                        android:layout_width="@dimen/height_icon_feed_option_home"
                        android:layout_height="@dimen/height_icon_feed_option_home"
                        android:layout_marginEnd="@dimen/margin_quarter"
                        android:layout_marginRight="@dimen/margin_quarter"
                        android:background="@color/placeholder_bg" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="8dp"
                        android:background="@color/placeholder_bg" />


                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--   <View
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="@color/placeholder_bg"
                   android:paddingBottom="@dimen/margin_half" />-->

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>