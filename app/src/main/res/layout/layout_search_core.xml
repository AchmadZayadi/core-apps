<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_quarter"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/margin_quarter">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVideoImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="center" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVideoPlaceholder"
                android:layout_width="@dimen/height_small"
                android:layout_height="@dimen/height_small"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:srcCompat="@drawable/play" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvImageTitle"
                style="@style/text_style_1"
                android:layout_marginTop="@dimen/margin_half"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="@dimen/margin_full"
                android:paddingLeft="@dimen/margin_full"
                android:paddingRight="@dimen/margin_full"
                android:paddingStart="@dimen/margin_full"
                android:textSize="@dimen/body_1"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvImageDescription"
                style="@style/text_style_2"
                android:layout_marginBottom="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_half"

                android:ellipsize="end"
                android:lineSpacingExtra="3sp"
                android:maxLines="2"
                android:paddingEnd="@dimen/margin_full"
                android:paddingLeft="@dimen/margin_full"
                android:paddingRight="@dimen/margin_full"
                android:paddingStart="@dimen/margin_full"
                android:textSize="@dimen/body_1" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
