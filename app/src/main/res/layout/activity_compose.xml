<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_viewgroup"
    style="@style/AppThemeMatrial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:background="@color/colorPrimary"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        android:tag="@string/tag_toolbar"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ToolbarTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                style="@style/button_image_toolbar"
                app:srcCompat="@drawable/arrow_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/text_style_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/txt_compose"
                android:textColor="@color/white"
                android:textSize="@dimen/title" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"

                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlAttach"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icAttach"
                        style="@style/button_image_toolbar"
                        android:layout_width="36dp"
                        android:padding="9dp"
                        app:srcCompat="@drawable/attachment" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBadge"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/circle_red_background"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icSend"
                    style="@style/button_image_toolbar"
                    android:layout_width="36dp"
                    android:layout_gravity="center_vertical"
                    android:padding="9dp"
                    app:srcCompat="@drawable/checked" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_full"
        android:paddingLeft="@dimen/margin_full"
        android:paddingEnd="@dimen/margin_full"
        android:paddingRight="@dimen/margin_full">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppThemeMatrial">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSearch"
                    style="@style/text_style_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="@string/send_to"
                    android:imeOptions="actionSearch"
                    android:inputType="textAutoComplete|textAutoCorrect"
                    android:paddingRight="@dimen/button_height"
                    android:textSize="@dimen/sub_title" />
            </com.google.android.material.textfield.TextInputLayout>

            <ProgressBar
                android:id="@+id/pb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_full"
                android:visibility="gone" />
        </RelativeLayout>

        <com.sesolutions.utils.FlowLayout
            android:id="@+id/flowlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppThemeMatrial"
            android:layout_below="@+id/flowlayout"
            android:layout_marginTop="8dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/subject"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black_87"
                android:textSize="@dimen/sub_title" />

        </com.google.android.material.textfield.TextInputLayout>


        <EditText
            android:id="@+id/etBody"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:background="@drawable/customboarder_text"
            android:gravity="top|left"
            android:layout_marginTop="16dp"
            android:hint="@string/message"
            android:textColor="@color/black_87"
            android:layout_below="@+id/v2"
            android:layout_marginBottom="@dimen/margin_full"
            android:paddingTop="@dimen/margin_half"
            android:paddingStart="@dimen/margin_half"
            android:textColorHint="@color/black_54"
            android:textSize="@dimen/sub_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTag"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_below="@+id/rl1"
            android:visibility="gone"
            app:popupTheme="@style/ToolbarTheme" />


    </RelativeLayout>

</RelativeLayout>




