<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_half"
    android:layout_marginBottom="@dimen/divider_length"
    android:minHeight="@dimen/height_row_notification"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/margin_full"
        android:paddingLeft="@dimen/margin_full"

        android:paddingTop="@dimen/margin_half"
        android:paddingEnd="@dimen/margin_full"
        android:paddingRight="@dimen/margin_full"
        android:paddingBottom="@dimen/margin_half">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ivSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llDetail"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_filled_lover"
            android:paddingStart="48dp"
            android:paddingTop="4dp"
            android:paddingEnd="48dp"
            android:paddingBottom="4dp"
            android:text="Use this sound"
            android:textColor="@color/white"
            android:visibility="invisible"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBookmark"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_half"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bookmark" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_full"
            android:layout_marginLeft="@dimen/margin_full"
            android:layout_toStartOf="@+id/ivBookmark"
            android:layout_toLeftOf="@id/ivBookmark"
            android:layout_marginTop="@dimen/margin_full"
            android:id="@+id/llDetail"
            android:layout_toEndOf="@+id/cvCard"
            android:layout_toRightOf="@+id/cvCard"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPlay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_play"
                    android:padding="1dp">
                </androidx.appcompat.widget.AppCompatImageView>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPause"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_pause"
                    android:padding="1dp">
                </androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:paddingStart="4dp"
                style="@style/text_style_2"
                android:textSize="@dimen/body_1"
                tools:text="Love me forever"
 />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMsg"
                style="@style/text_style_1"
                android:paddingStart="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_quarter"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/body_1"
                android:visibility="gone" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_quarter"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDate"
                    style="@style/text_style_2"
                    android:layout_gravity="center"
                    android:paddingStart="4dp"
                    tools:text="0:03"
                    android:maxLines="1"
                    android:textSize="@dimen/caption" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.cardview.widget.CardView
            android:id="@id/cvCard"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="@dimen/margin_full">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                tools:src="@tools:sample/avatars"
                android:scaleType="centerCrop" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPause2"
                android:layout_width="32dp"
                android:layout_gravity="center"
                android:layout_height="32dp"
                app:srcCompat="@drawable/pause"
                android:visibility="gone"
                android:layout_margin="@dimen/margin_full">

            </androidx.appcompat.widget.AppCompatImageView>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPlay2"
                android:layout_width="48dp"
                android:layout_gravity="center"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_play_arrow"
                android:visibility="visible"
                android:layout_margin="@dimen/margin_full">

            </androidx.appcompat.widget.AppCompatImageView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>