<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llReaction"
        android:fitsSystemWindows="false">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            android:stateListAnimator="@null"
            android:theme="@style/ActionBarTheme">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="false"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleGravity="bottom|center_horizontal"
                app:expandedTitleMarginStart="@dimen/margin_full"
                app:expandedTitleTextAppearance="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title=" "
                app:titleEnabled="true">

                <RelativeLayout
                    android:id="@+id/llCoverPhoto"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCoverPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="220sp"
                        android:scaleType="centerCrop"
                        tools:src="@tools:sample/avatars" />

                       <View
                        android:layout_width="match_parent"
                        android:layout_height="220sp"
                        android:background="@color/cardview_shadow_start_color2"
                        ></View>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAlbumTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/margin_quarter"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/heading_small" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAlbumDetail"
                        style="@style/text_style_stats"
                        android:layout_below="@+id/tvAlbumTitle"
                        android:layout_marginTop="@dimen/margin_quarter"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text=""
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:textSize="@dimen/body_2" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llStar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAlbumDetail"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_half"
                        android:layout_marginBottom="@dimen/margin_half"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar1"
                            android:layout_width="@dimen/size_star_song"
                            android:layout_height="@dimen/size_star_song"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/ss_progress_startColor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar2"
                            android:layout_width="@dimen/size_star_song"
                            android:layout_height="@dimen/size_star_song"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/ss_progress_startColor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar3"
                            android:layout_width="@dimen/size_star_song"
                            android:layout_height="@dimen/size_star_song"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/ss_progress_startColor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar4"
                            android:layout_width="@dimen/size_star_song"
                            android:layout_height="@dimen/size_star_song"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/ss_progress_startColor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar5"
                            android:layout_width="@dimen/size_star_song"
                            android:layout_height="@dimen/size_star_song"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/ss_progress_startColor" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCamera"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="176sp"
                        android:background="@drawable/circle_white_background"
                        android:padding="4sp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ses_camera"
                        tools:visibility="visible" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/llAlbumImage"
                        android:layout_width="@dimen/hieght_image_view_page2"
                        android:layout_height="@dimen/hieght_image_view_page2"
                        android:layout_marginBottom="@dimen/margin_half"
                        app:cardCornerRadius="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="145sp"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/rounded_holo_border_white">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivAlbumImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:src="@tools:sample/avatars" />



                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivCamera2"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginRight="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/circle_white_background"
                            android:padding="4sp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ses_camera"
                            tools:visibility="gone" />
                    </androidx.cardview.widget.CardView>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/llAlbumImage"
                        android:gravity="center"
                        android:layout_height="80dp">


                        <com.rey.material.widget.ImageView
                            android:id="@+id/llFavorite_song"
                            android:layout_centerVertical="true"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/favorite"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            ></com.rey.material.widget.ImageView>

                        <com.rey.material.widget.ImageView
                            android:id="@+id/like_song"
                            android:layout_width="32dp"
                            android:layout_centerVertical="true"
                            android:layout_height="32dp"
                            android:layout_toRightOf="@+id/llFavorite_song"
                            android:src="@drawable/like"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            ></com.rey.material.widget.ImageView>

                        <com.rey.material.widget.ImageView
                            android:id="@+id/playallid"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_toRightOf="@+id/like_song"
                            android:clickable="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/play_button_new"
                            app:fabSize="normal"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            app:layout_anchorGravity="bottom|right|end"
                            />

                        <com.rey.material.widget.ImageView
                            android:id="@+id/llComment_song"
                            android:layout_width="32dp"
                            android:layout_centerVertical="true"
                            android:layout_height="32dp"
                            android:layout_toRightOf="@+id/playallid"
                            android:src="@drawable/comment"
                            android:tint="@color/black"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            ></com.rey.material.widget.ImageView>

                        <com.rey.material.widget.ImageView
                            android:id="@+id/addtoplaylist"
                            android:layout_width="32dp"
                            android:layout_centerVertical="true"
                            android:layout_height="32dp"
                            android:layout_toRightOf="@+id/llComment_song"
                            android:src="@drawable/add_circle"
                            android:tint="@color/black"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            ></com.rey.material.widget.ImageView>

                    </RelativeLayout>


                </RelativeLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ToolbarTheme" />


            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llReaction"
            android:background="#F5F5F5"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/font_awesome_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:animateLayoutChanges="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvDetail"
                    style="@style/Card_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llAlbumDetail"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_half"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/margin_full"
                            android:paddingLeft="@dimen/margin_full">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/ivUserTitle"
                                    style="@style/text_style_2"
                                    android:layout_width="wrap_content"
                                    android:maxLines="1" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvUserTitle"
                                    style="@style/text_style_1"
                                    android:layout_marginLeft="@dimen/margin_quarter"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="@dimen/body_1" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_quarter">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/ivAlbumDate"
                                    style="@style/text_style_2"
                                    android:layout_width="wrap_content"
                                    android:maxLines="1"
                                    android:textSize="@dimen/caption" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvAlbumDate"
                                    style="@style/text_style_2"
                                    android:layout_marginStart="@dimen/margin_quarter"
                                    android:layout_marginLeft="@dimen/margin_quarter"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="@dimen/caption"
                                    tools:text="Feb 07, 2019" />

                            </androidx.appcompat.widget.LinearLayoutCompat>





                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/cvDetail"
                    android:clipToPadding="false"
                    android:padding="@dimen/item_offset" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNoData"
                    style="@style/text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/cvDetail"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/margin_full"
                    android:paddingTop="@dimen/margin_half"
                    android:textSize="@dimen/body_1"
                    android:visibility="gone" />

                <include layout="@layout/progress_view" />

                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="@dimen/button_height_small"
                    android:layout_height="@dimen/button_height_small"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:progressTint="@color/color_facebook"
                    android:visibility="gone" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/bottombarid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_like_favorite_comment" />
    </RelativeLayout>







</RelativeLayout>
