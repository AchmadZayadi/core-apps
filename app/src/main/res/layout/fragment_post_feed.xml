<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        sothree:theme="@style/ToolbarTheme">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            android:tag="@string/tag_toolbar"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/ToolbarTheme">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    android:layout_width="48dp"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="@dimen/margin_full"
                    android:rotation="45"
                    app:srcCompat="@drawable/add_24dp"
                    android:tint="@color/black"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    style="@style/text_style_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="48dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginEnd="@dimen/margin_half"
                    android:layout_marginRight="@dimen/margin_half"
                    android:layout_toStartOf="@+id/tvDone"
                    android:layout_toLeftOf="@+id/tvDone"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/margin_half"
                    android:text="@string/TITLE_UPDATE_STATUS"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDone"
                    style="@style/text_style_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_toolbar"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/margin_full"
                    android:layout_marginRight="@dimen/margin_full"
                    android:gravity="center"
                    android:text="@string/post"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_2"
                    android:textSize="@dimen/sub_heading" />

                <!--                <com.google.android.material.button.MaterialButton-->
                <!--                    android:id="@+id/bDone"-->
                <!--                    style="@style/button_simple"-->
                <!--                    android:layout_height="40dp"-->
                <!--                    android:layout_alignParentEnd="true"-->
                <!--                    android:layout_alignParentRight="true"-->
                <!--                    android:background="@color/colorPrimary"-->
                <!--                    android:layout_marginTop="@dimen/margin_half"-->
                <!--                    android:layout_marginRight="@dimen/margin_full"-->
                <!--                    app:elevation="0dp"-->
                <!--                    android:padding="@dimen/margin_quarter"-->
                <!--                    android:text="@string/share"-->
                <!--                    android:textStyle="bold"-->
                <!--                    android:textAppearance="@style/TextAppearance.AppCompat.Small"-->
                <!--                    app:cornerRadius="@dimen/margin_medium" />-->


            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

        <View style="@style/divider" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar"
        android:animateLayoutChanges="true"
        android:background="@color/white">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:paddingStart="@dimen/margin_full"
                android:paddingLeft="@dimen/margin_full"
                android:paddingTop="@dimen/margin_half"
                android:paddingEnd="@dimen/margin_half"
                android:paddingRight="@dimen/margin_half"
                android:paddingBottom="@dimen/margin_half">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/height_toolbar"
                    android:layout_height="@dimen/height_toolbar"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivProfile1"
                    android:layout_width="@dimen/height_toolbar"
                    android:layout_height="@dimen/height_toolbar"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_half"
                    android:paddingLeft="@dimen/margin_half">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTitleName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sub_heading" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_quarter">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llPrivacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/rounded_holo_border_grey_light">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivPrivacyImage"
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_quarter"
                                android:layout_marginRight="@dimen/margin_quarter"
                                android:padding="@dimen/margin_quarter"
                                android:text="@string/font_music"
                                android:textColor="@color/grey_feed"
                                android:textSize="@dimen/caption" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPostSetting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/margin_quarter"
                                android:layout_marginRight="@dimen/margin_quarter"
                                android:padding="@dimen/margin_quarter"
                                android:text="@string/privacy_everyone"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/caption" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="@dimen/margin_full"
                            android:layout_marginLeft="@dimen/margin_full"
                            android:background="@drawable/rounded_holo_border_grey_light"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDateImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_quarter"
                                android:layout_marginRight="@dimen/margin_quarter"
                                android:padding="@dimen/margin_quarter"
                                android:text="@string/font_Schedule"
                                android:textColor="@color/grey_feed"
                                android:textSize="@dimen/caption" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPostDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/margin_quarter"
                                android:layout_marginRight="@dimen/margin_quarter"
                                android:padding="@dimen/margin_quarter"
                                android:text="@string/privacy_everyone"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/caption" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llAttribution"
                    style="@style/ripple_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivAttribution"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginStart="@dimen/margin_quarter"
                        android:layout_marginLeft="@dimen/margin_quarter" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="12sp"
                        android:layout_height="12sp"
                        android:layout_marginStart="@dimen/margin_quarter"
                        android:layout_marginLeft="@dimen/margin_quarter"
                        android:tint="@color/text_color_2"
                        app:srcCompat="@drawable/ses_down" />


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!--   <android.support.v4.widget.NestedScrollView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">-->

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/cvHorizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlSticker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivPostSticker"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_marginTop="@dimen/margin_half" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivClearSticker"
                            android:layout_width="26sp"
                            android:layout_height="26sp"
                            android:layout_marginLeft="88sp"
                            android:background="@drawable/circle_cross"
                            android:padding="4sp"
                            android:rotation="45"
                            app:srcCompat="@drawable/add_create" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/etPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/margin_half"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="@string/txt_post_something"
                        android:inputType="textMultiLine|textCapSentences"
                        android:isScrollContainer="true"
                        android:minHeight="100sp"
                        android:overScrollMode="always"
                        android:padding="@dimen/margin_half"
                        android:paddingStart="@dimen/margin_full"
                        android:paddingLeft="@dimen/margin_full"
                        android:paddingEnd="@dimen/margin_full"
                        android:paddingRight="@dimen/margin_full"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:textColor="@color/text_color_1"
                        android:textColorHint="@color/text_color_2"
                        emojicon:emojiconSize="28sp" />
                    <TextView
                        android:id="@+id/tvKategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:text="Kategori"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                    <RelativeLayout
                        android:id="@+id/llPostBg"
                        android:layout_width="match_parent"
                        android:layout_height="210sp"
                        android:gravity="center"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivBgImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />


                        <EditText
                            android:id="@+id/etPostBg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="@string/txt_post_something"
                            android:maxHeight="210sp"
                            android:minHeight="@dimen/height_toolbar"
                            android:overScrollMode="always"
                            android:paddingStart="@dimen/margin_full"
                            android:paddingLeft="@dimen/margin_full"
                            android:paddingEnd="@dimen/margin_full"
                            android:paddingRight="@dimen/margin_full"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/heading"
                            emojicon:emojiconSize="28sp" />

                    </RelativeLayout>

                    <include layout="@layout/layout_post_sell" />

                    <include
                        android:id="@+id/cvChip"
                        layout="@layout/layout_chip"
                        android:visibility="gone" />

                    <include layout="@layout/layout_video" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvImageAttach"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_half"
                        android:descendantFocusability="beforeDescendants"
                        android:orientation="vertical"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llLinkMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_half"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivLinkImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true" />

                        <!-- youtube thumbnail view to show the thumbnail of videos -->
                        <com.google.android.youtube.player.YouTubeThumbnailView
                            android:id="@+id/video_thumbnail_image_view"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:background="@android:color/darker_gray"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                        <!--android:contentDescription="@string/thumbnail_image_view_desc"-->

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvLinkText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="4"
                            android:paddingStart="@dimen/margin_half"
                            android:paddingLeft="@dimen/margin_half"
                            android:textColor="@color/black_87"
                            android:textSize="@dimen/sub_heading"
                            android:textStyle="bold"
                            android:visibility="visible" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <!-- </android.support.v4.widget.NestedScrollView>-->


            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <include layout="@layout/layout_feed_bg_option_grid" />
    </RelativeLayout>
</RelativeLayout>