<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_offset">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_half">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivImage"
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/dividerColor"
                app:civ_border_width="@dimen/divider_length"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivRank"
                style="@style/image_tint"
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:layout_marginStart="42sp"
                android:layout_marginLeft="42sp"
                android:layout_marginTop="42sp"
                android:layout_marginEnd="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_half"
                android:background="@drawable/circle_white_background"
                android:padding="4dp"
                android:scaleType="centerCrop"
                app:tint="@color/colorPrimary"
                tools:src="@drawable/rank_3" />
        </RelativeLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                style="@style/text_style_1"
                android:layout_below="@+id/ivImage"
                android:layout_marginTop="@dimen/margin_half"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                tools:text="Stanley R. Card" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_quarter"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCredit"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/coins_16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCredit"
                    style="@style/text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/caption"
                    tools:text="700" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBadge"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginLeft="@dimen/margin_half"
                    app:srcCompat="@drawable/star_16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBadge"
                    style="@style/text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/caption"
                    tools:text="78" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_quarter"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_quarter"
            android:layout_marginBottom="@dimen/margin_half"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bAdd"
                style="@style/text_style_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_half"
                android:layout_marginBottom="@dimen/margin_half"
                android:layout_weight="1"
                android:background="@drawable/rounded_holo_border_primary"
                android:textAllCaps="false"
                android:textSize="@dimen/caption"
                tools:text="@string/ADD_FRIEND" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bFollow"
                style="@style/text_style_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_half"
                android:layout_weight="1"
                android:background="@drawable/rounded_holo_border_primary"
                android:minHeight="30dp"
                android:textAllCaps="false"
                android:textSize="@dimen/caption"
                tools:text="@string/follow" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bRemove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/tvName"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingStart="@dimen/margin_half"
            android:paddingLeft="@dimen/margin_half"
            android:paddingEnd="@dimen/margin_full"
            android:paddingRight="@dimen/margin_full"
            android:paddingBottom="@dimen/margin_full"
            android:tint="@color/text_color_1"
            android:visibility="gone"
            app:srcCompat="@drawable/cross"
            app:tint="@color/red" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>