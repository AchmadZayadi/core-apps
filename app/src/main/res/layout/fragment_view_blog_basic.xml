<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMain"
    style="@style/Main_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llReaction"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:fitsSystemWindows="true"
            android:stateListAnimator="@null"
            android:theme="@style/ToolbarTheme">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:expandedTitleMarginStart="@dimen/margin_full"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:statusBarScrim="@android:color/transparent"
                app:title=" ">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCoverPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:background="@drawable/scrim" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCamera"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:layout_marginTop="174sp"
                        android:padding="10sp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ses_camera" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTitle"
                        style="@style/text_style_light"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/margin_super"
                        android:layout_marginRight="@dimen/margin_super"
                        android:layout_marginBottom="@dimen/button_height"
                        android:textSize="@dimen/heading" />


                </RelativeLayout>


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ToolbarTheme" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/mScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llContent"
                style="@style/Main_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <include
                    layout="@layout/progress_view"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_full" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvDetail"
                    style="@style/Card_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:id="@+id/rlDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_half"
                        android:layout_marginBottom="@dimen/margin_half">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivUserImage"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/margin_full"
                            android:layout_marginLeft="@dimen/margin_full"
                            android:layout_marginBottom="@dimen/margin_half" />


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llAlbumDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/ivUserImage"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/margin_full">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">


                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/ivUserTitle"
                                        style="@style/text_style_2"
                                        android:layout_width="wrap_content" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvUserTitle"
                                        style="@style/text_style_2"
                                        android:layout_marginLeft="@dimen/margin_quarter"
                                        android:ellipsize="end"
                                        android:maxLines="1" />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/llStar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/llAlbumDetail"
                                    android:layout_centerHorizontal="true"
                                    android:visibility="gone">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ivStar1"
                                        style="@style/image_star"
                                        android:layout_width="@dimen/size_star_music"
                                        android:layout_height="@dimen/size_star_music"
                                        android:layout_marginLeft="@dimen/margin_star"
                                        android:layout_marginRight="@dimen/margin_star"
                                        app:srcCompat="@drawable/star_unfilled"
                                        app:tint="@color/colorPrimary" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ivStar2"
                                        style="@style/image_star"
                                        android:layout_width="@dimen/size_star_music"
                                        android:layout_height="@dimen/size_star_music"
                                        android:layout_marginLeft="@dimen/margin_star"
                                        android:layout_marginRight="@dimen/margin_star"
                                        app:srcCompat="@drawable/star_unfilled"
                                        app:tint="@color/colorPrimary" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ivStar3"
                                        style="@style/image_star"
                                        android:layout_width="@dimen/size_star_music"
                                        android:layout_height="@dimen/size_star_music"
                                        android:layout_marginLeft="@dimen/margin_star"
                                        android:layout_marginRight="@dimen/margin_star"
                                        app:srcCompat="@drawable/star_unfilled"
                                        app:tint="@color/colorPrimary" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ivStar4"
                                        style="@style/image_star"
                                        android:layout_width="@dimen/size_star_music"
                                        android:layout_height="@dimen/size_star_music"
                                        android:layout_marginLeft="@dimen/margin_star"
                                        android:layout_marginRight="@dimen/margin_star"
                                        app:srcCompat="@drawable/star_unfilled"
                                        app:tint="@color/colorPrimary" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ivStar5"
                                        style="@style/image_star"
                                        android:layout_width="@dimen/size_star_music"
                                        android:layout_height="@dimen/size_star_music"
                                        android:layout_marginLeft="@dimen/margin_star"
                                        android:layout_marginRight="@dimen/margin_star"
                                        app:srcCompat="@drawable/star_unfilled"
                                        app:tint="@color/colorPrimary" />


                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="@dimen/margin_quarter">


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/ivAlbumDate"
                                    style="@style/text_style_2"
                                    android:layout_width="wrap_content"
                                    android:textSize="@dimen/body_1" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvAlbumDate"
                                    style="@style/text_style_2"
                                    android:layout_marginLeft="@dimen/margin_quarter"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="@dimen/body_1" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvAlbumDetail"
                                style="@style/text_style_stats"
                                android:layout_marginTop="@dimen/margin_quarter"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/caption" />


                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <View style="@style/divider" />

                 <com.sesolutions.ui.customviews.NestedWebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_half" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.sesolutions.ui.customviews.PulsatorLayout
        android:id="@+id/pulsator"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:pulse_color="@color/white_40"
        app:pulse_count="4"
        app:pulse_duration="4000"
        app:pulse_interpolator="Decelerate"
        app:pulse_repeat="0"
        app:pulse_startFromScratch="true">

    </com.sesolutions.ui.customviews.PulsatorLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <include layout="@layout/layout_like_favorite_comment" />
</RelativeLayout>
