<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_half"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="@dimen/margin_full"
    app:cardElevation="2sp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCategory"
                style="@style/text_style_1"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/tvMore"
                android:layout_toStartOf="@+id/tvMore"
                android:padding="@dimen/margin_full"
                android:text="@string/education_arts"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMore"
                style="@style/text_style_2"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@drawable/rounded_holo_border_grey_18"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="6dp"
                android:text="@string/see_all"
                android:textSize="@dimen/caption_mini" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMiddle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_contest"
            android:layout_below="@+id/rlHeader">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <View
                android:id="@+id/vShadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_black_light" />

            <RelativeLayout
                android:id="@+id/llReactionOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <com.sesolutions.animate.bang.SmallBangView
                    android:id="@+id/sbvLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="64dp"
                    android:layout_marginRight="64dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivLike"
                        android:layout_width="@dimen/size_like_image_top_item_page"
                        android:layout_height="@dimen/size_like_image_top_item_page"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/music_like" />
                </com.sesolutions.animate.bang.SmallBangView>

                <com.sesolutions.animate.bang.SmallBangView
                    android:id="@+id/sbvFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivFavorite"
                        android:layout_width="@dimen/size_like_image_top_item_page"
                        android:layout_height="@dimen/size_like_image_top_item_page"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/music_favourite" />
                </com.sesolutions.animate.bang.SmallBangView>

                <com.sesolutions.animate.bang.SmallBangView
                    android:id="@+id/sbvFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivFollow"
                        android:layout_width="@dimen/size_like_image_top_item_page"
                        android:layout_height="@dimen/size_like_image_top_item_page"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/follow_artist" />

                </com.sesolutions.animate.bang.SmallBangView>


            </RelativeLayout>



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDiscount"
                style="@style/text_style_light"
                android:layout_toRightOf="@+id/tvOriginalPrice"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/margin_half"
                android:background="@drawable/rounded_filled_red"
                android:padding="6dp"
                android:textSize="@dimen/body_1" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDiscountedPrice"
                style="@style/text_style_light"
                android:layout_width="wrap_content"
                android:layout_above="@id/llStatus"
                android:layout_marginLeft="@dimen/margin_full"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:text="$152"
                android:layout_marginEnd="@dimen/_3ssp"
                android:layout_marginStart="@dimen/margin_full"
                android:textSize="26sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOriginalPrice"
                style="@style/text_style_light"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/tvDiscountedPrice"
                android:layout_above="@id/llStatus"
                android:layout_marginLeft="@dimen/_2ssp"
                android:layout_marginEnd="@dimen/_2ssp"
                android:text="$200.000"
                android:textColor="@color/white_54"
                android:layout_marginBottom="2dp"
                android:textSize="18sp" />

            <View
                android:id="@+id/view20"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_toRightOf="@+id/tvDiscountedPrice"
                android:layout_above="@id/llStatus"
                android:layout_toStartOf="@+id/tvOriginalPrice"
                android:layout_toEndOf="@+id/tvOriginalPrice"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                >

            </View>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/above_shadow"
                android:layout_above="@+id/llStatus"
                ></View>


            <RelativeLayout
                android:id="@+id/llStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/margin_quarter">

            </RelativeLayout>


            <jp.shts.android.library.TriangleLabelView
                android:id="@+id/percantageoffdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:backgroundColor="@color/DodgerBlue"
                app:corner="rightTop"
                app:labelBottomPadding="10dp"
                app:labelCenterPadding="1dp"
                app:labelTopPadding="18dp"
                app:primaryText="$200"
                app:primaryTextColor="@color/white"
                app:primaryTextSize="18sp"
                app:secondaryText="OFF"
                app:secondaryTextColor="@color/white"
                app:secondaryTextSize="12sp" />

        </RelativeLayout>

        <View
            style="@style/divider"
            android:layout_below="@+id/rlHeader" />

        <View
            style="@style/divider"
            android:layout_above="@+id/llTextBottom" />


        <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llTextBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlMiddle"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_marginEnd="36sp"
            android:layout_marginLeft="@dimen/margin_full"
            android:layout_marginRight="36sp"
            android:layout_marginStart="@dimen/margin_full"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_weight="1"
            android:orientation="vertical">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:layout_marginTop="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <!--                <androidx.appcompat.widget.AppCompatTextView-->
                <!--                    android:id="@+id/tvCategoryName"-->
                <!--                    style="@style/text_style_1"-->
                <!--                    android:layout_marginLeft="@dimen/margin_quarter"-->
                <!--                    android:layout_marginStart="@dimen/margin_quarter"-->
                <!--                    android:ellipsize="end"-->
                <!--                    android:maxLines="1"-->
                <!--                    android:textSize="@dimen/body_1" />-->
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llArtist2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDescCL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:layout_marginTop="@dimen/margin_quarter"

                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="14sp" />
                <!--                <androidx.appcompat.widget.AppCompatTextView-->
                <!--                    android:id="@+id/tvCategoryName"-->
                <!--                    style="@style/text_style_1"-->
                <!--                    android:layout_marginLeft="@dimen/margin_quarter"-->
                <!--                    android:layout_marginStart="@dimen/margin_quarter"-->
                <!--                    android:ellipsize="end"-->
                <!--                    android:maxLines="1"-->
                <!--                    android:textSize="@dimen/body_1" />-->
            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ivLocation"
                    style="@style/text_style_2"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/caption" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLocation"
                    style="@style/text_style_1"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="13dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ivCat"
                    style="@style/text_style_2"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/caption" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCat"
                    style="@style/text_style_1"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="13dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llTextBottom"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="-4dp"
            android:visibility="gone">

            <RelativeLayout
                style="@style/ripple_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_quarter"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="8dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv1"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginStart="@dimen/margin_half"
                    app:srcCompat="@drawable/envelope" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv1"
                    style="@style/text_style_light"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="@dimen/margin_half"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:layout_marginRight="@dimen/margin_half"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:layout_toRightOf="@+id/iv1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Contact"
                    android:textSize="@dimen/body_1" />


            </RelativeLayout>

            <RelativeLayout
                style="@style/ripple_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_quarter"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="8dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv2"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginStart="@dimen/margin_half"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/add_24dp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv2"
                    style="@style/text_style_light"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="@dimen/margin_half"
                    android:layout_marginLeft="@dimen/margin_quarter"
                    android:layout_marginRight="@dimen/margin_half"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:layout_toRightOf="@+id/iv2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/TXT_JOIN"
                    android:textSize="@dimen/body_1" />


            </RelativeLayout>

            <RelativeLayout
                style="@style/ripple_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_quarter"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="8dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv3"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginStart="@dimen/margin_half"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/share_music" />

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivOption"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rlMiddle"
            android:layout_marginBottom="@dimen/margin_full"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:paddingLeft="10sp"
            android:visibility="gone"
            android:paddingRight="10sp"
            app:srcCompat="@drawable/ic_bookmark_black_shape"
            app:tint="@color/colorPrimary" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivOption2"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/llTextBottom"
            android:paddingBottom="@dimen/_5ssp"
            android:layout_marginTop="-10sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            app:srcCompat="@drawable/ic_shopping_cart"
            app:tint="@color/DodgerBlue" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>