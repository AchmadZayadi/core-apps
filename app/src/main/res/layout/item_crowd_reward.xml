<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_offset">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minHeight="90sp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <View style="@style/divider" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            style="@style/text_style_1"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ivImage"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half"
            android:ellipsize="end"
            android:fontFamily="@string/medium_bold"
            android:maxLines="2"
            android:textStyle="bold"
            tools:text="Sandra Kingley" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_quarter"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ivDate"
                style="@style/text_style_2"
                android:layout_width="wrap_content"
                android:textSize="@dimen/caption"
                tools:text="5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDate"
                style="@style/text_style_2"
                android:layout_marginStart="@dimen/margin_quarter"
                android:layout_marginLeft="@dimen/margin_quarter"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/caption"
                tools:text="Film,Theater &amp; Video" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.sesolutions.utils.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_style_2"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_quarter"
                android:layout_marginEnd="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_half"
                android:text="@string/min_donation_amt"
                android:textSize="@dimen/caption" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrice"
                style="@style/text_style_primary"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_quarter"
                android:layout_marginEnd="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_half"
                android:fontFamily="@string/medium_bold"
                android:textSize="@dimen/caption"
                android:textStyle="bold"
                tools:text="$67897978" />

        </com.sesolutions.utils.FlowLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDesc"
            style="@style/text_style_2"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_quarter"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:textSize="@dimen/caption"
            tools:text="9 Feb" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>