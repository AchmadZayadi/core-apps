<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll"
        style="@style/ripple_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_full"
        android:layout_marginLeft="@dimen/margin_full"
        android:layout_marginRight="@dimen/margin_full"
        android:layout_marginStart="@dimen/margin_full"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:paddingBottom="6dp"
        android:paddingTop="4dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv1"
            style="@style/text_style_1"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv2"
            style="@style/text_style_1"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="2"
            android:textSize="@dimen/sub_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCross"
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:srcCompat="@drawable/cross" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCorrect"
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:srcCompat="@drawable/follow_artist"
            app:tint="@color/green" />

    </LinearLayout>

    <View
        style="@style/divider"
        android:layout_below="@+id/ll"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="64dp"
        android:background="@color/colorPrimary" />
</RelativeLayout>