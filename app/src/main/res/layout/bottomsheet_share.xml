<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/tools"
    android:id="@+id/rlDialogMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppThemeMatrial"
    android:background="@drawable/rounded_top_corner"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@drawable/rounded_top_corner"
            android:paddingStart="@dimen/margin_full"
            android:paddingLeft="@dimen/margin_full"
            android:paddingTop="@dimen/margin_full"
            android:paddingEnd="@dimen/margin_half"
            android:paddingRight="@dimen/margin_half"
            android:paddingBottom="@dimen/margin_half">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_width="@dimen/height_menu_icon"
                android:layout_height="@dimen/height_menu_icon"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_profile" />

            <!--            <androidx.appcompat.widget.AppCompatImageView-->
            <!--                android:id="@+id/ivProfile1"-->
            <!--                android:layout_width="@dimen/height_toolbar"-->
            <!--                android:layout_height="@dimen/height_toolbar"-->
            <!--                android:scaleType="centerCrop" />-->

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_half"
                android:paddingLeft="@dimen/margin_half">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Digvijay Singh"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_heading" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_quarter">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llPrivacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/rounded_holo_border_grey_light">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivPrivacyImage"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_quarter"
                            android:layout_marginRight="@dimen/margin_quarter"
                            android:padding="@dimen/margin_quarter"
                            android:src="@drawable/world"
                            android:text="@string/font_music"
                            android:textColor="@color/grey_feed"
                            android:textSize="@dimen/caption" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPostSetting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/margin_quarter"
                            android:layout_marginRight="@dimen/margin_quarter"
                            android:padding="@dimen/margin_quarter"
                            android:text="@string/privacy_everyone"
                            android:textColor="@color/black_87"
                            android:textSize="@dimen/caption" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/margin_full"
                        android:layout_marginLeft="@dimen/margin_full"
                        android:background="@drawable/rounded_holo_border_grey_light"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDateImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_quarter"
                            android:layout_marginRight="@dimen/margin_quarter"
                            android:padding="@dimen/margin_quarter"
                            android:text="@string/font_Schedule"
                            android:textColor="@color/grey_feed"
                            android:textSize="@dimen/caption" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPostDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/margin_quarter"
                            android:layout_marginRight="@dimen/margin_quarter"
                            android:padding="@dimen/margin_quarter"
                            android:text="@string/privacy_everyone"
                            android:textColor="@color/black_87"
                            android:textSize="@dimen/caption" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_half"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/txt_share_something"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:maxHeight="300sp"
            android:minHeight="60dp"
            android:overScrollMode="always"
            android:padding="@dimen/margin_half"
            android:paddingStart="@dimen/margin_full"
            android:paddingLeft="@dimen/margin_full"
            android:paddingEnd="@dimen/margin_full"
            android:paddingRight="@dimen/margin_full"
            android:scrollbars="vertical"
            android:textColor="@color/text_color_1"
            android:textColorHint="@color/text_color_2"
            emojicon:emojiconSize="28sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bShare"
            android:theme="@style/AppThemeMatrial"
            style="@style/button_simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_full"
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            android:padding="@dimen/margin_quarter"
            android:text="@string/share_now"
            android:backgroundTint="#7B52A5"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:cornerRadius="@dimen/margin_quarter" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View style="@style/divider" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll1"
        style="@style/Forground_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIcon"
            style="@style/image_tint"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/margin_full"
            android:layout_marginLeft="@dimen/margin_full"
            app:srcCompat="@drawable/add_circle" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFeedText"
            style="@style/text_style_1"
            android:padding="@dimen/margin_full"
            android:text="Share to your Story" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll2"
        style="@style/Forground_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/image_tint"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/margin_full"
            android:layout_marginLeft="@dimen/margin_full"
            app:srcCompat="@drawable/users" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_style_1"
            android:padding="@dimen/margin_full"
            android:text="@string/send_to" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llSendToMessage"
        style="@style/Forground_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/image_tint"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/margin_full"
            android:layout_marginLeft="@dimen/margin_full"
            app:srcCompat="@drawable/send_message" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_style_1"
            android:padding="@dimen/margin_full"
            android:text="Hapus Kirim pesan" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll4"
        style="@style/Forground_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/image_tint"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/margin_full"
            android:layout_marginLeft="@dimen/margin_full"
            app:srcCompat="@drawable/share" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_style_1"
            android:padding="@dimen/margin_full"
            android:text="@string/send_in_message" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llShareMore"
        style="@style/Forground_style"
        android:layout_marginBottom="@dimen/margin_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/image_tint"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/margin_full"
            android:layout_marginLeft="@dimen/margin_full"
            android:tint="@color/text_color_2"
            app:srcCompat="@drawable/share_music" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvShareMore"
            style="@style/text_style_1"
            android:padding="@dimen/margin_full"
            android:text="More Options..." />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
