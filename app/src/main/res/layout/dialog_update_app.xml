<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlDialogMain"
    style="@style/dialog_style"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDialogTitle"
        style="@style/text_style_1"
        android:padding="@dimen/margin_full"
        android:text="Update Available"
        android:textSize="@dimen/title"
        android:textStyle="bold" />

    <View style="@style/divider" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDialogText"
        style="@style/text_style_2"
        android:layout_width="wrap_content"
        android:minHeight="100dp"
        android:padding="@dimen/margin_full"
        android:text="Please Update this app"
        android:textSize="@dimen/sub_title" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_half"
        android:layout_marginLeft="@dimen/margin_half"
        android:layout_marginEnd="@dimen/margin_half"
        android:layout_marginRight="@dimen/margin_half"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:padding="@dimen/margin_half">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bCamera"
            style="@style/text_style_1"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half"
            android:background="@drawable/rounded_holo_border_grey_light"
            android:gravity="center"
            android:minWidth="100dp"
            android:text="@string/cancel"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bGallary"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/rounded_filled"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginLeft="@dimen/margin_half"
            android:textColor="@color/white"
            android:padding="@dimen/margin_half"
            android:gravity="center"
            android:minWidth="100dp"
            android:text="@string/last_updated" />

    </LinearLayout>

</LinearLayout>