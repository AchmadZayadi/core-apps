<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ripple_selector"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_full"
    android:layout_marginLeft="@dimen/margin_full"
    android:layout_marginRight="@dimen/margin_full"
    android:layout_marginStart="@dimen/margin_full"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:paddingBottom="6dp"
    android:paddingTop="4dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivOptionImage"
        style="@style/image_tint_2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:tint="@color/black_54"
        tools:srcCompat="@drawable/places_ic_search"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOptionText"
        style="@style/text_style_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_half"
        android:layout_marginStart="@dimen/margin_half"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="simple text"
        android:textSize="@dimen/body_1" />

</LinearLayout>