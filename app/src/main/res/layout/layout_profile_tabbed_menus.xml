<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvTabbedMenu"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rlUpper"
    android:layout_marginTop="@dimen/margin_half"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/divider" />

        <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llTabbedMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_half"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llTabbed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
               >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTabbed1"
                    android:layout_width="@dimen/height_medium_dp"
                    android:layout_height="@dimen/height_medium_dp"
                    android:layout_marginTop="@dimen/margin_half" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTabbed1"
                    style="@style/text_style_1"
                    android:layout_below="@+id/ivFeedImage"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_quarter"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="@dimen/height_text_tabbed" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llTabbed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
               >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTabbed2"
                    android:layout_width="@dimen/height_medium_dp"
                    android:layout_height="@dimen/height_medium_dp"
                    android:layout_marginTop="@dimen/margin_half" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTabbed2"
                    style="@style/text_style_1"
                    android:layout_below="@+id/ivFeedImage"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="@dimen/height_text_tabbed" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llTabbed3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTabbed3"
                    android:layout_width="@dimen/height_medium_dp"
                    android:layout_height="@dimen/height_medium_dp"
                    android:layout_marginTop="@dimen/margin_half" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTabbed3"
                    style="@style/text_style_1"
                    android:layout_below="@+id/ivFeedImage"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_quarter"
                    android:ellipsize="end"

                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="@dimen/height_text_tabbed" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llTabbed4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTabbed4"
                    android:layout_width="@dimen/height_medium_dp"
                    android:layout_height="@dimen/height_medium_dp"
                    android:layout_marginTop="@dimen/margin_half" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTabbed4"
                    style="@style/text_style_1"
                    android:layout_below="@+id/ivFeedImage"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="@dimen/height_text_tabbed" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

<!--        <View style="@style/divider" />-->
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>