<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_offset"
    app:cardCornerRadius="12dp"
    app:cardElevation="2sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRatingCount"
                style="@style/text_style_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:drawablePadding="@dimen/margin_quarter"
                android:paddingStart="@dimen/margin_quarter"
                android:paddingLeft="@dimen/margin_quarter"
                android:paddingTop="@dimen/store_item_margin"
                android:paddingEnd="@dimen/margin_quarter"
                android:paddingRight="@dimen/margin_quarter"
                android:paddingBottom="@dimen/store_item_margin"
                android:text="Order ID"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvorderId"
                style="@style/text_style_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_quarter"
                android:layout_marginLeft="@dimen/margin_quarter"
                android:layout_toEndOf="@+id/tvRatingCount"
                android:layout_toRightOf="@+id/tvRatingCount"
                android:text="#12" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCreatedOn"
                style="@style/text_style_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/margin_quarter"
                android:layout_margin="@dimen/margin_half"
                android:gravity="center_vertical"
                android:text="02 April 2019"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_half"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/product_image_on_list_cart"
                android:layout_height="@dimen/product_image_on_list_cart"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_profile"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layout_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginEnd="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_half"
                android:layout_toEndOf="@+id/ivImage"
                android:layout_toRightOf="@+id/ivImage"
                android:baselineAligned="false"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    style="@style/text_style_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOROTHY PERKINS Women Petite Black Solid Sgeath Dress"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <LinearLayout
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/store_item_margin_view">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/margin_quarter"
                            android:paddingLeft="@dimen/margin_quarter"
                            android:paddingTop="@dimen/margin_quarter"
                            android:paddingEnd="@dimen/margin_quarter"
                            android:paddingRight="@dimen/margin_quarter"
                            android:paddingBottom="@dimen/margin_quarter"
                            android:text="Total Items"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvItemCount"
                            style="@style/text_style_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/margin_quarter"
                            android:text="$ 600.00"
                            android:textSize="@dimen/body_1"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/store_item_margin_view">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/margin_quarter"
                            android:paddingLeft="@dimen/margin_quarter"
                            android:paddingTop="@dimen/margin_quarter"
                            android:paddingEnd="@dimen/margin_quarter"
                            android:paddingRight="@dimen/margin_quarter"
                            android:paddingBottom="@dimen/margin_quarter"
                            android:text="Total Amount"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPrice"
                            style="@style/text_style_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/margin_quarter"
                            android:text="$ 600.00"
                            android:textSize="@dimen/body_1"
                            android:textStyle="bold" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:layout_marginRight="@dimen/margin_half"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/store_item_margin_view">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/text_style_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/margin_quarter"
                            android:paddingLeft="@dimen/margin_quarter"
                            android:paddingTop="@dimen/margin_quarter"
                            android:paddingEnd="@dimen/margin_quarter"
                            android:paddingRight="@dimen/margin_quarter"
                            android:paddingBottom="@dimen/margin_quarter"
                            android:text="Status" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvStatus"
                            style="@style/text_style_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_quarter"
                            android:text="Processing"
                            android:textSize="@dimen/body_1"
                            android:textStyle="bold" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </LinearLayout>


                <LinearLayout
                    style="@style/Forground_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_half"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:weightSum="2">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcvViewOrder"
                        android:layout_width="wrap_content"
                        android:theme="@style/AppThemeMatrial"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:layout_marginRight="@dimen/margin_half"
                        android:layout_weight="1"
                        app:strokeColor="@color/text_color_2"
                        app:strokeWidth="1dp"
                        app:cardCornerRadius="@dimen/margin_quarter"
                        android:padding="@dimen/store_item_margin_view">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/text_style_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingStart="@dimen/margin_quarter"
                            android:paddingLeft="@dimen/margin_quarter"
                            android:paddingTop="@dimen/margin_quarter"
                            android:paddingEnd="@dimen/margin_quarter"
                            android:paddingRight="@dimen/margin_quarter"
                            android:paddingBottom="@dimen/margin_quarter"
                            android:text="@string/view_order" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcvDelete"
                        android:layout_width="wrap_content"
                        android:theme="@style/AppThemeMatrial"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:visibility="invisible"
                        android:layout_marginRight="@dimen/margin_half"
                        android:layout_weight="1"
                        app:strokeColor="@color/text_color_2"
                        app:strokeWidth="1dp"
                        app:cardCornerRadius="@dimen/margin_quarter"
                        android:padding="@dimen/store_item_margin_view">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/text_style_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingStart="@dimen/margin_quarter"
                            android:paddingLeft="@dimen/margin_quarter"
                            android:paddingTop="@dimen/margin_quarter"
                            android:paddingEnd="@dimen/margin_quarter"
                            android:paddingRight="@dimen/margin_quarter"
                            android:paddingBottom="@dimen/margin_quarter"
                            android:text="Print" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>