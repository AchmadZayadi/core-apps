<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    style="@style/Card_style"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_offset"
    app:cardCornerRadius="@dimen/margin_full">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_appointment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImage"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_margin="@dimen/margin_full"
            app:cardCornerRadius="@dimen/margin_half">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@drawable/dummy_profile">

            </androidx.appcompat.widget.AppCompatImageView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_marginEnd="@dimen/_48ssp"
            android:layout_marginTop="@dimen/margin_full"
            android:layout_toEndOf="@+id/cvImage"
            android:orientation="vertical"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_style_light"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="Andres Pereira">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_style_light"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="7PM-8PM">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_style_light"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="Carpenter Service">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_style_light"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="Status: Pending">

            </androidx.appcompat.widget.AppCompatTextView>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>