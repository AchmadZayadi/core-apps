<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/margin_medium"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingTop="100dp"
    android:paddingEnd="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBsViewCount"
        style="@style/text_style_light"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"

        android:drawableStart="@drawable/ses_eye_16"
        android:drawableLeft="@drawable/ses_eye_16"
        android:drawablePadding="@dimen/margin_half"
        android:gravity="center"
        android:text="56" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llBSHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/tvBsViewCount"
        android:background="@drawable/rounded_filled_upper_primary"
        android:gravity="center_vertical"
        android:visibility="visible">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBSTitle"
            style="@style/text_style_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_40"
            android:textSize="@dimen/sub_title"
            tools:text="@string/viewed_by_count" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDelete"
            style="@style/ripple_selector"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="@dimen/margin_medium"
            android:tint="@color/white"
            android:visibility="visible"
            app:srcCompat="@drawable/ses_delete_filled" />

        <ProgressBar
            android:id="@+id/pbLoader"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="@dimen/margin_medium"
            android:theme="@style/progressBarWhite"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRefresh"
            style="@style/ripple_selector"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="@dimen/margin_medium"
            android:tint="@color/white"
            android:visibility="visible"
            app:srcCompat="@drawable/ses_refresh" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        style="@style/Background_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llBSHeader"
        android:background="@color/white"
        android:clipToPadding="false"
        android:layoutAnimation="@anim/anim_fall_down"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_half"
        android:paddingBottom="@dimen/margin_half"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_story_viewers" />

    <include
        layout="@layout/layout_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llBSHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="@dimen/button_height_small"
        android:layout_height="@dimen/button_height_small"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />


</RelativeLayout>
