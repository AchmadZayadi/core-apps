<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_offset"
    android:layout_marginTop="@dimen/margin_half">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/rlMiddle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_video"
            android:layout_marginTop="@dimen/margin_half"
            app:cardCornerRadius="@dimen/margin_half">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSongImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_image_video"
                    android:scaleType="centerCrop" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/height_medium"
                    android:layout_height="@dimen/height_medium"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="73sp"
                    android:elevation="8dp"
                    app:srcCompat="@drawable/play" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llReactionOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_half">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivLike"
                        android:layout_width="@dimen/size_like_image_top_item_music"
                        android:layout_height="@dimen/size_like_image_top_item_music"
                        android:layout_marginRight="@dimen/margin_half" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivFavorite"
                        android:layout_width="@dimen/size_like_image_top_item_music"
                        android:layout_height="@dimen/size_like_image_top_item_music"
                        android:layout_marginRight="@dimen/margin_half" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivAdd"
                        android:layout_width="@dimen/size_like_image_top_item_music"
                        android:layout_height="@dimen/size_like_image_top_item_music"
                        android:layout_marginRight="@dimen/margin_half" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivWatchLater"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="8dp"
                    android:tint="@color/text_color_light"
                    app:srcCompat="@drawable/watch_later" />

                <LinearLayout
                    android:id="@+id/llvideocount"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/black_30"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin_quarter"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_video_icon"
                        app:tint="@color/white"></ImageView>

                    <TextView
                        android:id="@+id/videocountid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        ></TextView>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDuration"
                    style="@style/text_style_light"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingLeft="@dimen/margin_quarter"
                    android:paddingRight="@dimen/margin_quarter"
                    android:visibility="visible"
                    android:text="4:04"
                    android:background="@color/black_30"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/margin_quarter"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/margin_full"
                    android:layout_marginRight="@dimen/margin_full"
                    android:gravity="center_vertical" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivOption"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ivSongImage"
                    android:padding="8dp"
                    android:rotation="90"
                    android:tint="@color/text_color_2"
                    android:visibility="gone"
                    app:srcCompat="@drawable/vertical_dots" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llTextBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlMiddle"
            android:layout_margin="@dimen/margin_half"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_quarter"
            android:paddingRight="@dimen/margin_quarter">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/leanerid1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivSaveFeed"
                        android:layout_width="@dimen/height_icon_feed_option_home"
                        android:layout_height="@dimen/height_icon_feed_option_home"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/ic_save" />

                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/leanerid1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_half"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivFbShare"
                        android:layout_width="@dimen/height_icon_feed_option_home"
                        android:layout_height="@dimen/height_icon_feed_option_home"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/ic_facebook" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivWhatsAppShare"
                        android:layout_width="@dimen/height_icon_feed_option_home"
                        android:layout_height="@dimen/height_icon_feed_option_home"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/whatsapp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivImageShare"
                        android:layout_width="@dimen/height_icon_feed_option_home"
                        android:layout_height="@dimen/height_icon_feed_option_home"
                        android:layout_marginEnd="@dimen/margin_full"
                        android:layout_marginRight="@dimen/margin_full"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/ic_share" />


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSongTitle"
                    style="@style/text_style_1"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:layout_marginRight="90dp"
                    android:layout_marginEnd="90dp"
                    android:layout_marginTop="@dimen/margin_quarter"
                    android:text="Koushal Rathor"
                    android:textColor="@color/black"
                    android:inputType="textCapSentences|textNoSuggestions"
                    android:capitalize="words"
                    android:maxLines="1"
                    android:textSize="@dimen/sub_heading"
                    android:textStyle="bold"
                    tools:ignore="Deprecated" />



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llArtist"
                    android:layout_below="@+id/tvSongTitle"
                    android:layout_marginTop="@dimen/margin_quarter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ivArtist"
                        style="@style/text_style_2"
                        android:layout_width="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:textSize="@dimen/caption" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvArtist"
                        style="@style/text_style_2"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:textSize="@dimen/caption2" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ivLocation"
                        style="@style/text_style_2"
                        android:layout_width="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:textSize="@dimen/caption" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLocation"
                        style="@style/text_style_2"
                        android:layout_marginLeft="@dimen/margin_quarter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:textSize="@dimen/caption" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSongDetail"
                        style="@style/text_style_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_quarter"
                        android:layout_marginRight="54dp"
                        android:layout_marginEnd="54dp"

                        android:layout_marginTop="@dimen/margin_quarter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/caption"
                        tools:ignore="NotSibling" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llStar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar1"
                            style="@style/image_star"
                            android:layout_width="@dimen/size_star_video"
                            android:layout_height="@dimen/size_star_video"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/colorPrimary" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar2"
                            style="@style/image_star"
                            android:layout_width="@dimen/size_star_video"
                            android:layout_height="@dimen/size_star_video"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/colorPrimary" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar3"
                            style="@style/image_star"
                            android:layout_width="@dimen/size_star_video"
                            android:layout_height="@dimen/size_star_video"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/colorPrimary" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar4"
                            style="@style/image_star"
                            android:layout_width="@dimen/size_star_video"
                            android:layout_height="@dimen/size_star_video"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/colorPrimary" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivStar5"
                            style="@style/image_star"
                            android:layout_width="@dimen/size_star_video"
                            android:layout_height="@dimen/size_star_video"
                            android:layout_margin="@dimen/margin_star"
                            app:srcCompat="@drawable/star_unfilled"
                            app:tint="@color/colorPrimary" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</RelativeLayout>