<resources>

    <!-- Base application theme. -->
    <style name="LibAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Widget.AppCompat.SeekBar" parent="Base.Widget.AppCompat.SeekBar" />

    <style name="WhiteSeekBar" parent="Base.Widget.AppCompat.SeekBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#777777</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="myTabBoldTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>

    </style>
</resources>
